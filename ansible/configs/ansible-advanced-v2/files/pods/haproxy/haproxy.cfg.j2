global
  log /dev/log  local0
  log /dev/log  local1 notice
  stats socket /var/lib/haproxy/stats level admin
  chroot /var/lib/haproxy
  user haproxy
  group haproxy
  daemon

defaults
  log global
  mode  http
  option  httplog
  option  dontlognull
        timeout connect 5000
        timeout client 50000
        timeout server 50000

frontend gitlab
    bind *:8929 ssl crt /etc/ssl/certs/cert.pem
    mode http
    http-request redirect scheme https unless { ssl_fc }
    use_backend gitlab-pod
backend gitlab-pod
    balance source
    server host control.example.com:5050 check

{% if groups['towers'] is defined %}
frontend towers
    bind *:8443 ssl crt /etc/ssl/certs/cert.pem
    mode http
    http-request redirect scheme https unless { ssl_fc }
    use_backend towers
backend towers
    balance source
	{% for host in groups['towers'] %}
    server tower{{ loop.index }} {{ host }}:80 check
	{% endfor %}
{% endif %}

{% if groups['towerfl'] is defined %}
frontend towerfl
    bind *:8443 ssl crt /etc/ssl/certs/cert.pem
    mode http
    http-request redirect scheme https unless { ssl_fc }
    use_backend towerfl
backend towerfl
    balance source
	{% for host in groups['towerfl'] %}
    server tower{{ loop.index }} {{ host }}:80 check
	{% endfor %}
{% endif %}

{% if groups['frontends'] is defined %}
frontend frontends
    bind *:8080 ssl crt /etc/ssl/certs/cert.pem
    mode http
    http-request redirect scheme https unless { ssl_fc }
    use_backend frontends
backend frontends
    balance roundrobin
    server  frontend {{ groups['frontends'][0] }}:80 check
{% endif %}
