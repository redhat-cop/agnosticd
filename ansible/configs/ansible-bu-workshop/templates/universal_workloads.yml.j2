---
{% for _workload in pre_software_workloads %}

- name: Install pre-software workloads for {{ _workload.group }}
  hosts: {{ _workload.group }}
  become: {{ _workload.become | default(true) }}
  tasks:
{% for role in _workload.roles %}
{% filter indent(width=4) %}

    - name: Deploy {{ role }}
      include_role:
        name: {{ role }}

{% endfilter %}
{% endfor %}
{% endfor %}
