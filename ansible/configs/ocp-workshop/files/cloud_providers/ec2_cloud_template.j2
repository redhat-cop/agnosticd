        },
        "Tags": [
          {
            "Key": "Name",
            "Value": "node{{loop.index}}"
          },
          {
            "Key": "AnsibleGroup",
            "Value": "nodes"
          },
          {
            "Key": "Project",
            "Value": "{{project_tag}}"
          },
          {
            "Key": "{{ project_tag }}",
            "Value": "node"
          },
