[GenericExample:vars]

###########################################################################
### Ansible Vars
###########################################################################
timeout=60
ansible_become=yes
ansible_ssh_user={{remote_user}}


[GenericExample:children]
towers
frontends
apps
appdbs
windows
support

[towers]
## These are the towers
{% for host in groups['towers'] %}
tower{{loop.index}}.{{chomped_zone_internal_dns}} public_host_name=tower{{loop.index}}.{{ guid }}{{subdomain_base_suffix}} ssh_host={{host}}
{% endfor %}

[frontends]
## These are the frontends
{% for host in groups['frontends'] %}
frontend{{loop.index}}.{{chomped_zone_internal_dns}} ssh_host={{host}}
{% endfor %}

[apps]
## These are the apps
{% for host in groups['apps']  %}
app{{loop.index}}.{{chomped_zone_internal_dns}} ssh_host={{host}}
{% endfor %}

[appdbs]
## These are the appdbs
{% for host in groups['appdbs'] %}
appdb{{loop.index}}.{{chomped_zone_internal_dns}} ssh_host={{host}}
{% endfor %}

[windows]
## These are the activedirectory servers
{% for host in groups['activedirectories'] %}
activedirectory{{loop.index}}.{{chomped_zone_internal_dns}} ssh_host=activedirectory{{loop.index}}.{{subdomain_base}} ansible_password={{hostvars[host]['ansible_password']}}
{% endfor %}


## These are the supporthosts
[support]
{% for host in groups['support'] %}
support{{loop.index}}.{{chomped_zone_internal_dns}} ssh_host={{host}}
{% endfor %}

[windows:vars]
ansible_connection=winrm
ansible_port=5986
ansible_ssh_port=5986
ansible_user=Administrator
ansible_ssh_user=Administrator
ansible_winrm_server_cert_validation=ignore
ansible_winrm_transport=basic
ansible_become=false
