apiVersion: v1
kind: PersistentVolume
metadata:
  name: vol{{ index }}
spec:
  capacity:
    storage: {{ nfs_user_vols_size }}
  accessModes:
  - ReadWriteOnce
  - ReadWriteMany
  nfs:
    path: /user_vols/vol{{ index }}
    server: {{ nfs_server_address }}
  persistentVolumeReclaimPolicy: Recycle
  storageClassName: nfs