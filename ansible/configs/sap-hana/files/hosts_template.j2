{% if cloud_provider == "osp" %}
[hanas]
{% if hana_instance_count == 2 %}
hana-{{ guid }}1
hana-{{ guid }}2
{% else %}
hana-{{ guid }}
{% endif %}

{% if s4hana_instance_count == 1 %}
[s4hanas]
s4hana-{{ guid }}
{% endif %}

[hana:children]
hanas

{% if s4hana_instance_count == 1 %}
[s4hana:children]
s4hanas
{% endif %}

[sap:children]
hanas
{% if s4hana_instance_count == 1 %}
s4hanas
{% endif %}

[sap:vars]
timeout=60
ansible_become=yes
ansible_user={{remote_user}}
ansible_ssh_common_args="-o StrictHostKeyChecking=no"
sap_preconfigure_modify_etc_hosts=true
sap_domain=automation.local
{% endif %}

{% if cloud_provider == "ec2" %}
[hanas]
{% if instances[3].count == 2 %}
hana1
hana2
{% else %}
hana1
{% endif %}

{% if instances[2].count == 1 %}
[s4hanas]
s4hana
{% endif %}

[hana:children]
hanas

{% if instances[2].count == 1 %}
[s4hana:children]
s4hanas
{% endif %}

[sap:children]
hanas
{% if instances[2].count == 1 %}
s4hanas
{% endif %}

[sap:vars]
timeout=60
ansible_become=yes
ansible_user={{remote_user}}
ansible_ssh_common_args="-o StrictHostKeyChecking=no"
sap_preconfigure_modify_etc_hosts=true
sap_domain={{ guid }}.internal
{% endif %}