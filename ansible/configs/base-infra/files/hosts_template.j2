{% set windows_vars = '' %}
{% if 'windows' in inventory_groups %}
[windows:vars]
ansible_connection=winrm
ansible_winrm_server_cert_validation=ignore
ansible_port=5986
{% endif %}

{% for group in inventory_groups %}

[{{ group }}]
{%   for host in groups[group] %}
{%     if cloud_provider == 'ec2' %}
{{ host }}
{%     elif cloud_provider == 'osp' %}
{{ host }}.example.com
{%     endif %}
{%   endfor %}
{% endfor %}
{{ windows_vars }}
