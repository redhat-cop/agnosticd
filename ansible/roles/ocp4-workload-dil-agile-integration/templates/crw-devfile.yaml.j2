---
apiVersion: 1.0.0
metadata:
  name: dil-ai-user{{ item }}
projects:
  -
    name: DILAgileIntegration
    source:
      type: git
      location: "http://gogs.{{route_subdomain}}/user{{item}}/dayintheliferepo.git"
components:
  -
    type: chePlugin
    id: redhat/vscode-xml/latest
  -
    type: chePlugin
    memoryLimit: 2Gi
    id: redhat/vscode-apache-camel/latest
  -
    type: chePlugin
    id: redhat/java8/latest
  -
    id: redhat/quarkus-java11/latest
    type: chePlugin
  -
    mountSources: true
    memoryLimit: 4927M
    type: dockerimage
    volumes:
      - name: m2
        containerPath: /home/user/.m2
    image: 'quay.io/eclipse/che-quarkus@sha256:0bd071932235090e0a260e0fea084d6fc82f74ecad46d1040e5026d6a627e72a'
    alias: 'quarkus-nodejs-tools'
    env:
      - name: JAVA_OPTS
        value: >-
          -XX:MaxRAMPercentage=50.0
          -XX:+UseParallelGC
          -XX:MinHeapFreeRatio=10
          -XX:MaxHeapFreeRatio=20
          -XX:GCTimeRatio=4
          -XX:AdaptiveSizePolicyWeight=90
          -Dsun.zip.disableMemoryMapping=true
          -Xms20m
          -Djava.security.egd=file:/dev/./urandom
          -Duser.home=/home/user
      - value: $(JAVA_OPTS)
        name: MAVEN_OPTS
  -
    type: dockerimage
    alias: 'openshift-tools'
    image: quay.io/weimeilin79/java8tools:latest
    env:
      - name: MAVEN_CONFIG
        value: ""
      - name: JAVA_OPTS
        value: >-
          -XX:MaxRAMPercentage=50.0
          -XX:+UseParallelGC
          -XX:MinHeapFreeRatio=10
          -XX:MaxHeapFreeRatio=20
          -XX:GCTimeRatio=4
          -XX:AdaptiveSizePolicyWeight=90
          -Dsun.zip.disableMemoryMapping=true
          -Xms20m
          -Djava.security.egd=file:/dev/./urandom
          -Duser.home=/home/user
      - name: MAVEN_OPTS
        value: $(JAVA_OPTS)
    memoryLimit: 3Gi
    endpoints:
      - name: '8080/tcp'
        port: 8080
    mountSources: true
    volumes:
      - name: m2
        containerPath: /home/user/.m2
  -
    alias: vscode-camelk
    type: chePlugin
    reference: https://raw.githubusercontent.com/RedHat-Middleware-Workshops/dayinthelife-streaming/master/support/che/meta.yaml
