apiVersion: rbac.authorization.k8s.io/v1
kind: ClusterRoleBinding
metadata: 
  name: "{{ opsview_project }}"
  namespace: "{{ opsview_project }}"
  labels: 
    app: "{{ opsview_app_name }}"
subjects: 
- kind: ServiceAccount
  name: "{{ opsview_app_name }}"
  namespace: "{{ opsview_project }}"
roleRef:
  apiGroup: rbac.authorization.k8s.io
  kind: ClusterRole
  name: cluster-admin