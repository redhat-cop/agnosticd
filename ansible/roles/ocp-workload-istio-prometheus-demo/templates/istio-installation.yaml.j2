apiVersion: "istio.openshift.com/v1alpha1"
kind: "Installation"
metadata:
  name: "istio-installation"
spec:
  deployment_type: openshift
  istio:
    authentication: true
    community: false
    prefix: openshift-istio-tech-preview/
    version: 0.3.0
  kiali:
    username: {{kiali_user}}
    password: {{kiali_password}}
    prefix: kiali/
    version: v0.8.1
