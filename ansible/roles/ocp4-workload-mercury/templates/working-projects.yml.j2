kind: Project
apiVersion: project.openshift.io/v1
metadata:
  name: mercury
  annotations:
    openshift.io/description: ''
    openshift.io/display-name: Project Mercury
    openshift.io/requester: {{ ocp_username }}
spec:
  finalizers:
    - kubernetes
---
kind: RoleBinding
apiVersion: rbac.authorization.k8s.io/v1
metadata:
  name: admin
  namespace: mercury
subjects:
  - kind: User
    apiGroup: rbac.authorization.k8s.io
    name: {{ ocp_username }}
roleRef:
  apiGroup: rbac.authorization.k8s.io
  kind: ClusterRole
  name: admin