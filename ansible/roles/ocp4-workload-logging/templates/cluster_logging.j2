apiVersion: "logging.openshift.io/v1"
kind: "ClusterLogging"
metadata:
  name: "instance"
  namespace: "openshift-logging"
spec:
  managementState: "Managed"
  logStore:
    type: "elasticsearch"
    elasticsearch:
      nodeCount: {{ _logging_elasticsearch_replicas|int }}
{% if _logging_elasticsearch_replicas|int > 1 %}
      redundancyPolicy: "SingleRedundancy"
{% else %}
      redundancyPolicy: "ZeroRedundancy"
{% endif %}
      nodeSelector: 
{% if _logging_use_dedicated_nodes | d("") | length > 0 %}
        "node-role.kubernetes.io/{{ _logging_use_dedicated_nodes }}": ""
      tolerations:
      - key: "{{ _logging_use_dedicated_nodes }}"
        value: reserved
        effect: NoSchedule
      - key: "{{ _logging_use_dedicated_nodes }}"
        value: reserved
        effect: NoExecute
{% else %}
        node-role.kubernetes.io/worker: ""
{% endif %}
      resources:
        request:
          memory: "{{ _logging_elasticsearch_memory_request }}"
      storage:
        storageClassName: "gp2"
        size: "{{ _logging_elasticsearch_storage_request }}"
  visualization:
    type: "kibana"
    kibana:
      replicas: 1
      nodeSelector: 
{% if _logging_use_dedicated_nodes | d("") | length > 0 %}
        "node-role.kubernetes.io/{{ _logging_use_dedicated_nodes }}": ""
      tolerations:
      - key: "{{ _logging_use_dedicated_nodes }}"
        value: reserved
        effect: NoSchedule
      - key: "{{ _logging_use_dedicated_nodes }}"
        value: reserved
        effect: NoExecute
{% else %}
        node-role.kubernetes.io/worker: ""
{% endif %}
  curation:
    type: "curator"
    curator:
      schedule: "30 3 * * *"
      nodeSelector: 
{% if _logging_use_dedicated_nodes | d("") | length > 0 %}
        "node-role.kubernetes.io/{{ _logging_use_dedicated_nodes }}": ""
      tolerations:
      - key: "{{ _logging_use_dedicated_nodes }}"
        value: reserved
        effect: NoSchedule
      - key: "{{ _logging_use_dedicated_nodes }}"
        value: reserved
        effect: NoExecute
{% else %}
        node-role.kubernetes.io/worker: ""
{% endif %}
  collection:
    logs:
      type: "fluentd"
      fluentd:
        tolerations:
        - operator: Exists
