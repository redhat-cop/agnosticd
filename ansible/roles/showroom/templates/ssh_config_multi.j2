{% for user in showroom_lab_users %}
# Entry for connecting as {{ user }}
Host {{ showroom_ssh_host_tty1 }}
  HostName {{ showroom_ssh_host_tty1 | default(showroom_host) | default('bastion') }}
  User {{ user }}
  IdentityFile {{ showroom_user_home_dir }}/.ssh/id_ed25519
  Port 22
  UserKnownHostsFile /dev/null
  StrictHostKeyChecking no
  LogLevel ERROR

Host {{ showroom_ssh_host_tty2 }}
  HostName {{ showroom_ssh_host_tty2 | default(showroom_host) | default('bastion') }}
  User {{ user }}
  IdentityFile {{ showroom_user_home_dir }}/.ssh/id_ed25519
  Port 22
  UserKnownHostsFile /dev/null
  StrictHostKeyChecking no
  LogLevel ERROR

{% endfor %}
