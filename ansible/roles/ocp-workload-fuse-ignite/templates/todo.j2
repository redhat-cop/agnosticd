kind: List
apiVersion: v1
items:
- kind: ImageStream
  apiVersion: v1
  metadata:
    name: todo
    labels:
      app: syndesis
      syndesis.io/app: todo
      syndesis.io/component: todo
  spec:
    tags:
      - name: 'latest'
        from:
          kind: DockerImage
          name: {{ todo_image }}
- kind: Service
  apiVersion: v1
  metadata:
    name: todo
    labels:
      app: syndesis
      syndesis.io/app: todo
      syndesis.io/component: todo
  spec:
    ports:
      - protocol: TCP
        port: 8080
        targetPort: 8080
    selector:
      app: syndesis
      syndesis.io/app: todo
      syndesis.io/component: todo
    type: ClusterIP
    sessionAffinity: None
- apiVersion: v1
  kind: Route
  metadata:
    labels:
      app: syndesis
      syndesis.io/app: todo
      syndesis.io/component: todo
    name: todo
  spec:
    port:
      targetPort: 8080
    to:
      kind: Service
      name: todo
    tls:
      termination: edge
      insecureEdgeTerminationPolicy: Allow
- kind: DeploymentConfig
  apiVersion: apps.openshift.io/v1
  metadata:
    name: todo
    labels:
      app: syndesis
      syndesis.io/app: todo
  spec:
    strategy:
      type: Recreate
      recreateParams:
        timeoutSeconds: 600
      activeDeadlineSeconds: 21600
    triggers:
      - type: ConfigChange
      - type: ImageChange
        imageChangeParams:
          automatic: true
          containerNames:
            - todo
          from:
            kind: ImageStreamTag
            name: 'todo:latest'
    replicas: 1
    revisionHistoryLimit: 10
    selector:
      app: syndesis
      syndesis.io/app: todo
      syndesis.io/component: todo
    template:
      metadata:
        labels:
          app: syndesis
          syndesis.io/app: todo
          syndesis.io/component: todo
      spec:
        containers:
          - name: todo
            image: ''
            ports:
              - name: http
                containerPort: 8080
                protocol: TCP
            env:
              - name: TODO_DB_SERVER
                value: syndesis-db
              - name: TODO_DB_NAME
                value: sampledb
              - name: TODO_DB_USER
                value: sampledb
              - name: TODO_DB_PASS
                value: "{{ syndesis_sampledb_password }}"
              - name: TODO_DB_SCHEMA
                value: sampledb
            resources:
              limits:
                memory: 256Mi
              requests:
                memory: 256Mi
            terminationMessagePath: /dev/termination-log
            terminationMessagePolicy: File
            imagePullPolicy: Always
        restartPolicy: Always
        terminationGracePeriodSeconds: 30
        dnsPolicy: ClusterFirst  