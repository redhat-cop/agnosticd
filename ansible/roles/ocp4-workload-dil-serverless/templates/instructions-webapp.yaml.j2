apiVersion: "integreatly.org/v1alpha1"
kind: "WebApp"
metadata:
  name: "{{ ocp4_workload_dil_serverless_webapp_client_id }}"
  namespace: "{{ webapp_namespace }}"
  labels:
    app: "{{ ocp4_workload_dil_serverless_webapp_client_id }}"
spec:
  app_label: "{{ ocp4_workload_dil_serverless_webapp_client_id }}"
  template:
    path: "{{ ocp4_workload_dil_serverless_webapp_operator_template_path }}"
    parameters:
      IMAGE: quay.io/redhatintegration/tutorial-web-app:latest
      OPENSHIFT_OAUTHCLIENT_ID: "{{ ocp4_workload_dil_serverless_webapp_client_id }}"
      OPENSHIFT_OAUTH_HOST: "oauth-openshift.{{ route_subdomain }}"
      OPENSHIFT_HOST: "console-openshift-console.{{ route_subdomain }}"
      INSTALLED_SERVICES: |-
        {{ solex_services }}
      OPENSHIFT_VERSION: "4"
{% if ocp4_workload_dil_serverless_webapp_walkthrough_locations is defined  %}
      WALKTHROUGH_LOCATIONS: "{{ ocp4_workload_dil_serverless_webapp_walkthrough_locations|join(',') }}"
{% endif %}