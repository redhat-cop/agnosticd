apiVersion: argoproj.io/v1alpha1
kind: Application
metadata:
  name: staging-project{{ item }}
  namespace: argocd
spec:
  destination:
    namespace: staging-project{{ item }}
    server: https://kubernetes.default.svc
  project: staging-project{{ item }}
  source:
    path: gitops
    repoURL: {{ workshop_source.giturl }}
    targetRevision: "{{ workshop_source.gitbranch }}"