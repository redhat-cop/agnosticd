apiVersion: tekton.dev/v1alpha1
kind: Pipeline
metadata:
  name: pipeline
spec:
  params:
    - default: {{ ocp4_workload_ai_ml_workflows_demo_pipeline_builder_image }}
      name: BUILDER_IMAGE
      type: string
    - name: NOTEBOOK_LIST
      type: string
      default: {{ ocp4_workload_ai_ml_workflows_demo_pipeline_notebook_list }}
    - name: MODEL_IMAGE
      type: string
      default: image-registry.openshift-image-registry.svc:5000/{{ namespace }}/pipeline:latest
  resources:
    - name: pipeline-source
      type: git
    - name: pipeline-image
      type: image
  tasks:
    - name: build-pipeline-image
      params:
        - name: BUILDER_IMAGE
          value: $(params.BUILDER_IMAGE)
        - name: S2I_SOURCE_NOTEBOOK_LIST
          value: $(params.NOTEBOOK_LIST)
      resources:
        inputs:
          - name: source
            resource: pipeline-source
        outputs:
          - name: image
            resource: pipeline-image
      taskRef:
        kind: Task
        name: simple-model-s2i
    - name: deploy-pipeline-kn-service
      params:
        - name: kn-image
          value: registry.redhat.io/openshift-serverless-1/client-kn-rhel8:0.17.3
        - name: ARGS
          value:
            - service
            - create
            - pipeline
            - '--force'
            - '--image=$(params.MODEL_IMAGE)'
            - '--scale-min=1'
            - '--cluster-local'
      runAfter:
        - build-pipeline-image
      taskRef:
        kind: ClusterTask
        name: kn
