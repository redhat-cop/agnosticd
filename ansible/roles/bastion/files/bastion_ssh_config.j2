{% if cloud_provider == 'ec2' %}
Host ec2* *.internal
  User {{remote_user}}
{% if use_own_key|bool %}
  IdentityFile ~/.ssh/{{env_authorized_key}}.pem
{% else %}
  IdentityFile ~/.ssh/{{key_name}}.pem
{% endif %}
  ForwardAgent yes
  StrictHostKeyChecking no
  ConnectTimeout 60
  ConnectionAttempts 10
{% endif %}	
{% if cloud_provider == 'osp' %}	
Host *.example.com
  User {{remote_user}}	
{% if use_own_key|bool %}	
  IdentityFile ~/.ssh/{{env_authorized_key}}.pem	
{% else %}	
  IdentityFile ~/.ssh/{{key_name}}.pem	
{% endif %}	
  ForwardAgent yes	
  StrictHostKeyChecking no	
