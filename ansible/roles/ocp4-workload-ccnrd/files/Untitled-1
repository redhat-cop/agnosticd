ssh-copy-id -i ~/.ssh/id_rsa doh-redhat.com@bastion.seoul-70af.open.redhat.com

TARGET_HOST="bastion.seoul-70af.open.redhat.com"
OCP_USERNAME="doh-redhat.com"
WORKLOAD="ocp4-workload-ccnrd"
GUID=70af
USER_COUNT=100
MODULE_TYPE=m4
SSH_KEY=~/.ssh/id_rsa

# a TARGET_HOST is specified in the command line, without using an inventory file
ansible-playbook -i ${TARGET_HOST}, ./configs/ocp-workloads/ocp-workload.yml \
    -e"ansible_ssh_private_key_file=${SSH_KEY}" \
    -e"ansible_user=${OCP_USERNAME}" \
    -e"ocp_username=${OCP_USERNAME}" \
    -e"ocp_workload=${WORKLOAD}" \
    -e"silent=False" \
    -e"guid=${GUID}" \
    -e"user_count=${USER_COUNT}" \
    -e"module_type=${MODULE_TYPE}" \
    -vvvv \
    -e"ACTION=create"