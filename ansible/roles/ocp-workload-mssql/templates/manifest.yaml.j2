---
apiVersion: v1
data:
  non-operator-db: {{ ("db." + mssql_namespace + ".svc.cluster.local")|b64encode }}
  operator-db: ZGIuaGVsbG8xLnN2Yy5jbHVzdGVyLmxvY2Fs
kind: Secret
metadata:
  name: db-hostname
  namespace: {{ mssql_namespace }}
type: Opaque
---
apiVersion: v1
kind: Service
metadata:
  labels:
    app: db-app
  name: db
  namespace: {{ mssql_namespace }}
spec:
  ports:
    - port: 1433
      name: tds
  selector:
    app: sql
  type: ClusterIP
---
apiVersion: apps/v1
kind: Deployment
metadata:
  labels:
    app: sql
  name: db-ctp31
  namespace: {{ mssql_namespace }}
spec:
  replicas: 1
  selector:
    matchLabels:
      app: sql
  template:
    metadata:
      labels:
        app: sql
    spec:
      containers:
      - env:
        - name: SA_PASSWORD
          value: Yukon900
        - name: ACCEPT_EULA
          value: '''Y'''
        image: quay.io/quaa/tech-exchange-db-ctp31
        imagePullPolicy: IfNotPresent
        name: db-ctp31
        ports:
        - containerPort: 1433
          protocol: TCP 
        volumeMounts:
        - mountPath: "/var/opt/mssql/data"
          name: {{ mssql_volume_mount_name }}
      volumes:
      - name: {{ mssql_volume_mount_name }}
        persistentVolumeClaim:
          claimName: {{ mssql_pvc_name }}
      restartPolicy: Always
---
apiVersion: v1
kind: PersistentVolumeClaim
metadata:
  name: {{ mssql_pvc_name }}
  namespace: {{ mssql_namespace }}
spec:
  accessModes:
  - ReadWriteOnce
  resources:
    requests:
      storage: 10Gi
---
apiVersion: v1
kind: Service
metadata:
  labels:
    app: db-app
  name: db-app-svc
  namespace: {{ mssql_namespace }}
spec:
  ports:
  - port: 5000
    protocol: TCP
    targetPort: 5000
  selector:
    app: db-app
  type: ClusterIP
---
apiVersion: route.openshift.io/v1
kind: Route
metadata:
  labels:
    app: db-app
  name: {{ mssql_app_route_name }}
  namespace: {{ mssql_namespace }}
spec:
  port:
    targetPort: 5000
  subdomain: ""
  to:
    kind: Service
    name: db-app-svc
    weight: 100
---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: db-app
  namespace: {{ mssql_namespace }}
  labels:
    app: db-app
spec:
  replicas: 1
  selector:
    matchLabels:
      app: db-app
  template:
    metadata:
      labels:
        app: db-app
    spec:
      imagePullSecrets:
        - name: sql-pull-secret
      containers:
        - name: db-app
          image: romonste.azurecr.io/demo-app:latest
          ports:
            - containerPort: 5000
          env:
            - name: db-hostname
              valueFrom:
                secretKeyRef:
                  key: non-operator-db
                  name: db-hostname
