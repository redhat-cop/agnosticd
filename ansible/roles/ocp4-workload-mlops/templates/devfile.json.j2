{
  "metadata": {
    "name": "{{user}}-workspace"
  },
  "projects": [
    {
      "name": "{{user_source_repo_name}}",
      "source": {
        "location": "http://{{user}}:{{gogs_pwd}}@gogs-labs-infra.{{ route_subdomain }}/{{user}}/{{user_source_repo_name}}",
        "type": "git",
        "branch": "master"
      }
    },
    {
      "name": "{{user_deploy_repo_name}}",
      "source": {
        "location": "http://{{user}}:{{gogs_pwd}}@gogs-labs-infra.{{ route_subdomain }}/{{user}}/{{user_deploy_repo_name}}",
        "type": "git",
        "branch": "master"
      }
    }
  ],
  "components": [
    {
      "id": "ms-python/python/latest",
      "memoryLimit": "1Gi",
      "type": "chePlugin"
    },
    {
      "mountSources": true,
      "referenceContent": "apiVersion: apps/v1\nkind: Deployment\nmetadata:\n  name: python-tools\n  labels:\n    app: python-tools        \nspec:\n  replicas: 1\n  selector:\n    matchLabels:\n      app: python-tools\n  template:\n    metadata:\n      name: python-tools\n    spec:\n      containers:\n      - image: image-registry.openshift-image-registry.svc:5000/labs-infra/rh-mlops-workshop-notebook:3.6\n        name: seldon\n        resources:    \n          requests:\n            cpu: 1\n            memory: 1Gi                  \n          limits:\n            cpu: 1\n            memory: 2Gi\n        ports:\n        - containerPort: 5000\n          name: http-server\n        - containerPort: 6000\n          name: metric\n        volumeMounts:\n        - mountPath: /projects\n          name: projects\n        command:\n          - tail\n        args:\n          - -f\n          - /dev/null\n        env:\n          - name: MLFLOW_EXPERIMENT_NAME\n            value: Dev\n        envFrom:\n        - secretRef:\n            name: {{user}}-mlflow-obc\n        - configMapRef:\n            name: {{user}}-mlflow-obc\n        - configMapRef:\n            name: {{user}}-mlflow-cm\n      volumes:\n      - name: projects\n        persistentVolumeClaim:\n          claimName: projects\n",
      "type": "openshift",
      "reference": "python.yaml",
      "alias": "python-tools"
    }
  ],
  "apiVersion": "1.0.0",
  "commands": [
    {
      "name": "Login to OpenShift",
      "actions": [
        {
          "workdir": "${CHE_PROJECTS_ROOT}",
          "type": "exec",
          "command": "oc login https://$KUBERNETES_SERVICE_HOST:$KUBERNETES_SERVICE_PORT --insecure-skip-tls-verify=true -u {{user}} -p {{workshop_openshift_user_password}}",
          "component": "python-tools"
        }
      ]
    }
  ]
}