---
apiVersion: app.kiegroup.org/v2
kind: KieApp
metadata:
  name: dm
  namespace: labs-dm
spec:
  environment: rhdm-production-immutable
  useImageTags: true
  commonConfig:
    adminUser: "{{workshop_kie_user_name}}"
    adminPassword: "{{workshop_kie_user_password}}"
  objects:
    servers:
      - id: drl-fraud
        deployments: 1
        replicas: 1
        resources:
          requests:
            cpu: 2
            memory: 4Gi
          limits:
            cpu: 2
            memory: 4Gi
        build:
          kieServerContainerDeployment: >-
            drl-fraud=com.myspace:drl-fraud:1.0.0-SNAPSHOT
          gitSource:
            uri: >-
              https://github.com/rh-mlops-workshop/drl-fraud-demo.git
            reference: master
