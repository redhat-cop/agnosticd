            fieldRef:
              fieldPath: metadata.name
        - name: WATCH_NAMESPACE
          valueFrom:
            fieldRef:
              fieldPath: metadata.namespace
        - name: REGISTRY
          value: registry.redhat.io
        - name: PROJECT
          value: rhmtc
        - name: RSYNC_TRANSFER_REPO
          value: {{ mig_migration_namespace }}-rsync-transfer-rhel8
        - name: RSYNC_TRANSFER_TAG
          value: v1.4.5-2
