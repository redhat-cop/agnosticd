---
kind: Job
apiVersion: batch/v1
metadata:
  name: cleanup-ceph-{{ ai_ocp_namespace }}
{% if sandbox_openshift_namespace | default("") | length > 0 %}
  namespace: {{ sandbox_openshift_namespace }}
{% else %}
  namespace: cleanup
{% endif %}
spec:
  replicas: 1
  selector:
    name: cleanup-ceph
  template:
    metadata:
      labels:
        name: cleanup-ceph
    spec:
      containers:
      - image: {{ ceph_cleanup_job_image }}
        name: cleanup-job
        command:
        - "/bin/sh"
        - "/etc/ceph/cleanup-script.sh"
        env:
        - name: LAB
          value: {{ ai_ocp_namespace }}
        volumeMounts:
        - name: keyring-volume
          mountPath: /etc/ceph
      restartPolicy: Never
      volumes:
      - name: keyring-volume
        secret:
          secretName: ceph-tenant-config
