---
kind: Job
apiVersion: batch/v1
metadata:
  name: cleanup-ceph-{{ ai_ocp_namespace }}-{{ 1000 | random }}
  namespace: cleanup
spec:
  template:
    spec:
      containers:
      - name: cleanup-job
        image: {{ ceph_cleanup_job_image }}        
        command:
        - "/bin/sh"
        - "/etc/ceph/cleanup-script.sh"
        env:
        - name: LAB
          value: {{ env_type }}-{{ guid }}
        volumeMounts:
        - name: keyring-volume
          mountPath: /etc/ceph
      restartPolicy: Never
      volumes:
      - name: keyring-volume
        secret:
          secretName: ceph-tenant-config
