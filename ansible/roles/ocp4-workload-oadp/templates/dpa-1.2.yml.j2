apiVersion: oadp.openshift.io/v1alpha1
kind: DataProtectionApplication
metadata:
  name: example-dpa
  namespace: openshift-adp
spec:
  features:
    dataMover: 
      enable: true
      credentialName: dm-credentials
  configuration:
    restic:
      enable: false
    velero:
      defaultPlugins:
      - openshift
      - aws
      - csi
      - vsm
    restic:
      enable: true
  backupLocations:
    - velero:
        default: true
        provider: aws
        backupSyncPeriod: 2m0s
        credential:
            name: cloud-credentials
            key: cloud
        objectStorage:
            bucket: {{ ocs_bucketname }}
            prefix: velero
        config:
            profile: default
            region: {{ aws_region }}
            s3ForcePathStyle: "true"
            s3Url: {{ noobaa_s3_url }}
