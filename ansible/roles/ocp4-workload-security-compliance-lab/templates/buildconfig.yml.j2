apiVersion: v1
kind: Template
labels:
  app: ecommerce-build-template
  template: ecommerce-build-template
message: A Jenkins pipeline for building the ecommerce application
metadata:
  name: ecommerce-build-template
  annotations:
    description: |-
      A Jenkins pipeline for building the ecommerce application
    iconClass: icon-jenkins
    openshift.io/display-name: Ecommerce Image Pipeline
    tags: instant-app,jenkins
parameters:
- description: GUID
  name: GUID
  value: fb78
- description: Gogs user
  name: GOGS_USER
  value: user1
- description: Git Branch to use
  name: GIT_BRANCH
  value: master
- description: SSH Password
  name: SSH_PASSWORD
- description: OCP Application domain
  name: APP_DOMAIN
- description: bastion
  name: BASTION
- description: OCP API Endpoint
  name: API_ENDPOINT
- description: registry
  name: INTERNAL_REGISTRY
objects:
- apiVersion: v1
  kind: BuildConfig
  metadata:
    labels:
      app: ${GOGS_USER}-ecommerce-pipeline
    name: ${GOGS_USER}-ecommerce-pipeline
  spec:
    failedBuildsHistoryLimit: 5
    nodeSelector: {}
    output: {}
    postCommit: {}
    resources: {}
    runPolicy: Serial
    source:
      git:
        uri:  http://gogs-{{ admin_project }}.{{ ocp_apps_domain }}/${GOGS_USER}/SecurityDemos.git
        ref: ${GIT_BRANCH}
    strategy:
      jenkinsPipelineStrategy:
        jenkinsfilePath: Jenkinsfile
        env:
        - name: JENKINS_GIT_BRANCH
          value: ${GIT_BRANCH}
        - name: JENKINS_GIT_URL
          value: http://gogs-{{ admin_project }}.{{ ocp_apps_domain }}/${GOGS_USER}/SecurityDemos.git
        - name: JENKINS_GUID
          value: ${GUID}
        - name: JENKINS_GOGS_USER
          value: ${GOGS_USER}
        - name: JENKINS_SSH_PASSWORD
          value: ${SSH_PASSWORD}
        - name: JENKINS_BASTION
          value: ${BASTION}
        - name: JENKINS_APP_DOMAIN
          value: ${APP_DOMAIN}
        - name: JENKINS_OCP_API_ENDPOINT
          value: ${API_ENDPOINT}
        - name: JENKINS_INTERNAL_REGISTRY
          value: ${INTERNAL_REGISTRY}
    triggers:
    - generic:
        secret: ${GOGS_USER}-ecommerce-pipeline
      type: Generic
