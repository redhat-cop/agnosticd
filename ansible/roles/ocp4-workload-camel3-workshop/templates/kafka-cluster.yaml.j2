{% for __user in users %}
---
apiVersion: kafka.strimzi.io/v1beta2
kind: Kafka
metadata:
  name: my-cluster
  namespace: {{ __user }}
spec:
  kafka:
    config:
      offsets.topic.replication.factor: 1
      transaction.state.log.replication.factor: 1
      transaction.state.log.min.isr: 1
      default.replication.factor: 1
      min.insync.replicas: 1
      inter.broker.protocol.version: '3.1'
    storage:
      type: ephemeral
    listeners:
      - name: plain
        port: 9092
        type: internal
        tls: false
      - name: tls
        port: 9093
        type: internal
        tls: true
    version: 3.1.0
    replicas: {{ num_kafka_brokers }}
    resources:
      requests:
        memory: 512Mi
        cpu: ".1"
      limits:
        memory: 512Mi
        cpu: ".5"

  entityOperator:
    topicOperator:
      resources:
        requests:
          memory: 512Mi
          cpu: ".1"
        limits:
          memory: 512Mi
          cpu: ".5"
    userOperator:
      resources:
        requests:
          memory: 512Mi
          cpu: ".1"
        limits:
          memory: 512Mi
          cpu: ".5"

  zookeeper:
    storage:
      type: ephemeral
    replicas: {{ num_zk_nodes }}
    resources:
      requests:
        memory: 512Mi
        cpu: ".1"
      limits:
        memory: 512Mi
        cpu: ".5"

{% endfor %}