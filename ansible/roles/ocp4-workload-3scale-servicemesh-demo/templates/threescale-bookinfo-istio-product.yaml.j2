apiVersion: capabilities.3scale.net/v1beta1
kind: Product
metadata:
  name: bookinfo-istio-product
  namespace: "{{ threescale_project }}"
spec:
  name: "BookInfo Product (Istio Adapter)"
  systemName: bookinfo-istio-product
  metrics:
    hits:
      description: Number of API hits
      friendlyName: Hits
      unit: "hit"
  methods:
    method01:
      friendlyName: ProductPage
  mappingRules:
    - httpMethod: GET
      pattern: "/api/v1/product"
      increment: 1
      metricMethodRef: hits
    - httpMethod: GET
      pattern: "/productpage"
      increment: 1
      metricMethodRef: method01
  applicationPlans:
    basicplan:
      name: "BookInfo Istio Basic Plan"    
  deployment:
    apicastHosted:
      authentication:
        userkey:
          authUserKey: user_key      
