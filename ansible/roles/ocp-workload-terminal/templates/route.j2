apiVersion: route.openshift.io/v1
kind: Route
metadata:
  annotations:
    console.alpha.openshift.io/overview-app-route: "true"
  name: "{{ _terminal_name }}"
  namespace: "{{ _terminal_project }}"
  labels:
    app: "{{ _terminal_name }}"
    class: spawner
    spawner: terminal-server
spec:
  port:
    targetPort: 8080-tcp
  to:
    kind: Service
    name: "{{ _terminal_name }}"
{% if _terminal_ssl|d(False)|bool %}
  tls:
    insecureEdgeTerminationPolicy: Redirect
    termination: edge
{% endif %}