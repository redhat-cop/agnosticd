apiVersion: v1
kind: LimitRange
metadata:
  name: {{lab_1_name}}-core-resource-limits
  namespace: {{lab_1_name}}
spec:
  limits:
  - default:
      cpu: {{container_default_limit_cpu}}
      memory: {{container_default_limit_mem}}
    defaultRequest:
      cpu: {{container_default_request_cpu}}
      memory: {{container_default_request_mem}}
    max:
      memory: {{container_max_mem}}
    min:
      memory: 10Mi
    type: Container
  - max:
      memory: {{pod_max_mem}}
    min:
      memory: {{pod_min_mem}}
    type: Pod
