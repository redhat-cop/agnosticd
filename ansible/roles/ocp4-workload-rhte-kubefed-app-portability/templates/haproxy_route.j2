apiVersion: route.openshift.io/v1
kind: Route
metadata:
  labels:
    app: haproxy-lb
  name: haproxy-lb
  namespace: "{{ _haproxy_project }}"
spec: 
  port:
    targetPort: 8080
  subdomain: ""
  tls:
    insecureEdgeTerminationPolicy: Redirect
    termination: edge
  to:
    kind: Service
    name: haproxy-lb-service
    weight: 100
  wildcardPolicy: None
