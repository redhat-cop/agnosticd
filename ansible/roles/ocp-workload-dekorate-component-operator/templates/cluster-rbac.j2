kind: ClusterRole
apiVersion: rbac.authorization.k8s.io/v1beta1
metadata:
  name: halkyon-operator
rules:
- apiGroups:
  - '*'
  attributeRestrictions: null
  resources:
  - '*'
  verbs:
  - '*'
- apiGroups: null
  attributeRestrictions: null
  nonResourceURLs:
  - '*'
  resources: []
  verbs:
  - '*'

---

kind: ClusterRoleBinding
apiVersion: rbac.authorization.k8s.io/v1beta1
metadata:
  name: halkyon-operator-role-binding
subjects:
- kind: ServiceAccount
  name: halkyon-operator
  namespace: {{ halkyon_operator_namespace }}
roleRef:
  kind: ClusterRole
  name: halkyon-operator
  apiGroup: rbac.authorization.k8s.io
