#jinja2: lstrip_blocks: "True"

# General
terraform {
  required_version = ">= {{ terraform_version }}"
}

provider "ibm" {
  generation = {{ ibm_cloud_gen }}
  region     = "{{ region }}"
  version = "~> 1.4"
}

# Variables
locals {
  BASENAME = "{{ guid }}"
  ZONE     = "{{ region }}-1"
  flavor   = "{{ node_instance_type }}"
}

variable "image_name" {
  type = string
  default = "{{ node_instance_image }}"
}

# Data
data "ibm_resource_group" "rg" {
  name = "${local.BASENAME}-rg"
  # name = var.resource_group
}

data "ibm_is_image" "os" {
  name = var.image_name
}

data "ibm_is_ssh_key" "ssh_key_id" {
  name = "${local.BASENAME}-key"
  # name = var.ssh_key
}

# Resources
resource "ibm_is_vpc" "vpc" {
  name = "${local.BASENAME}-vpc"
  resource_group = data.ibm_resource_group.rg.id
}

resource "ibm_is_security_group" "sg1" {
  name = "${local.BASENAME}-sg1"
  vpc  = ibm_is_vpc.vpc.id
}

resource "ibm_is_security_group_rule" "ingress_ssh_all" {
  group     = ibm_is_security_group.sg1.id
  direction = "inbound"
  remote    = "0.0.0.0/0"
  tcp {
    port_min = 22
    port_max = 22
  }
}

resource "ibm_is_subnet" "subnets" {
  count                    = {{ subnet_number }}

  name                     = "${local.BASENAME}-subnet-${count.index}"
  vpc                      = ibm_is_vpc.vpc.id
  zone                     = local.ZONE
  total_ipv4_address_count = 256
}

resource "ibm_is_instance" "servers" {
  count = {{ node_instance_count }}

  name          = "${local.BASENAME}-vsi-${count.index}"
  resource_group = data.ibm_resource_group.rg.id
  vpc            = ibm_is_vpc.vpc.id
  zone           = local.ZONE
  tags           = ["Name", "vsi-${count.index}"]
  keys           = [data.ibm_is_ssh_key.ssh_key_id.id]
  image          = data.ibm_is_image.os.id
  profile        = local.flavor

  primary_network_interface {
    subnet          = ibm_is_subnet.subnets["${count.index}"].id
    security_groups = [ibm_is_security_group.sg1.id]
  }
}

resource "ibm_is_floating_ip" "fip1" {
  count = {{ node_instance_count }}

  name   = "${local.BASENAME}-fip1-${count.index}"
  target = ibm_is_instance.servers["${count.index}"].primary_network_interface[0].id
}

# Outputs
output "sshcommand" {
  value = "ssh root@ibm_is_floating_ip.fip1.address"
}

output "vpc_id" {
  value = ibm_is_vpc.vpc.id
}
