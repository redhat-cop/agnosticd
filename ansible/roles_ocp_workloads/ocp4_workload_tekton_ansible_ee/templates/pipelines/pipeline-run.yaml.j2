apiVersion: tekton.dev/v1beta1
kind: PipelineRun
metadata:
  name: build-ee-{{ 999999999999999999999 | random | to_uuid }}
  namespace: {{ ocp4_workload_tekton_ansible_ee_namespace }}
  labels:
    tekton.dev/pipeline: pipeline-ansible-builder
spec:
  params:
    - name: GIT-URL
      value: {{ item.execution_environment_git_url }}
    - name: GIT-REVISION
      value: {{ item.execution_environment_git_branch }}
    - name: ANSIBLE_BUILDER_IMAGE
      value: {{ ansible_builder_image |default(ocp4_workload_tekton_ansible_ee_builder_image) }}
    - name: NAME
      value: "{{ ocp4_workload_tekton_ansible_ee_registry_host }}/{{ item.execution_environment_image_name }}"
    - name: TAG
      value: {{ execution_environment_image_tag }}
    - name: CONTEXT
      value: ./
    - name: DOCKERFILE
      value: Containerfile
    - name: BUILD_ARGS
      value: ''
    - name: PUSH_ARGS
      value: ''
    - name: TLSVERIFY
      value: 'false'
  pipelineRef:
    name: pipeline-ansible-builder
  serviceAccountName: pipeline-service-account
  timeout: 1h0m0s
  workspaces:
    - name: ee-repo
      persistentVolumeClaim:
        claimName: ansible-builder-pvc
