apiVersion: argoproj.io/v1alpha1
kind: ApplicationSet
metadata:
  name: {{ _app }}-{{ cluster.name }}
  namespace: {{ ocp4_workload_devsecops_validated_pattern_openshift_gitops_namespace }}
spec:
  generators:
    - clusterDecisionResource:
        configMapRef: acm-placement
        labelSelector:
          matchLabels:
            cluster.open-cluster-management.io/placement: {{ _app }}-{{ cluster.name }}
        requeueAfterSeconds: 30
  template:
    metadata:
      name: {{ _app }}-{{ cluster.name }}
      labels:
        velero.io/exclude-from-backup: "true"
    spec:
      destination:
        namespace: {{ _namespace }}
        server: "{{ '{{server}}' }}"
      project: default
      source:
{% if _namespace == "globex"  %}
{% if _app == "globex"  %}
        path: gitops/application/globex/overlays/{{ cluster.name }}
{% else %}
        path: gitops/application/globex/overlays/fail
{% endif %}
        repoURL: {{ _ocp4_workload_devsecops_validated_pattern_gitea_repo_devsecops_url }}
        targetRevision: main
      ignoreDifferences:
        - kind: "ServiceAccount"
          jsonPointers:
          - /imagePullSecrets
{% elif _namespace == "kafka"  %}
        path: gitops/application/kafka/overlays/{{ cluster.name }}
        repoURL: {{ _ocp4_workload_devsecops_validated_pattern_gitea_repo_devsecops_url }}
        targetRevision: main
{% elif _namespace == "ci"  %}
        path: config/pipeline/globex-ui
        repoURL: {{ _ocp4_workload_devsecops_validated_pattern_gitea_repo_devsecops_url }}
        targetRevision: main
      ignoreDifferences:
        - kind: "ServiceAccount"
          jsonPointers:
          - /imagePullSecrets
{% endif %}
      syncPolicy:
        automated:
          prune: true
          selfHeal: true
        syncOptions:
          - CreateNamespace=true
          - PruneLast=true