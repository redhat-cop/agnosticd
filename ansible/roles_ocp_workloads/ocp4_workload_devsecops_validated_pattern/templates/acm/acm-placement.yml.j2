apiVersion: cluster.open-cluster-management.io/v1alpha1
kind: Placement
metadata:
  name: {{ _app }}-{{ cluster.name }}
  namespace: {{ ocp4_workload_devsecops_validated_pattern_openshift_gitops_namespace }}
spec:
  clusterSets:
    - global
  predicates:
    - requiredClusterSelector:
        labelSelector:
          matchExpressions:
            - key: purpose
              operator: In
              values:
                - {{ cluster.purpose }}