global:
  pattern: industrial-edge

  options:
    useCSV: False
    syncPolicy: Automatic
    installPlanApproval: Automatic

  git:
    hostname: {{ gitea_server_host }}
    account: lab-user
    username: lab-user
    email: lab-user@opentlc.com
    dev_revision: main

  imageregistry:
    type: openshift
    hostname: registry.{{ _ocp4_workload_industrial_edge_apps_domain }}
    account: openshift

  datacenter:
    clustername: cluster-{{ guid }}
    domain: {{ subdomain_base }}

  edge:
    clustername: edge-{{ guid }}
    domain: {{ subdomain_base }}

  last_updated: {{ ansible_date_time.date }}_{{ ansible_date_time.time }}
