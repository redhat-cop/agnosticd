#    Normally valuesDirectoryURL is auto-calculated by the install chart
#
#    People actively working on the pattern might like to specify an alternate
#    location so that they don't accidentally commit theire cluster details to
#    the main branch
#
#    Beware that ArgoCD often requires additional help to reflect any changes to
#     the file located here
#
#    valuesDirectoryURL: https://github.com/beekhof/patterns/raw/main

secrets:
  # NEVER COMMIT THESE VALUES TO GIT
  imageregistry:
    # Token is only used for Quay. No token necessary for
    # OpenShift integrated registry
    # Quay -> Robot Accounts -> Robot Token
    token: PLAINSTRING

  git:
    # Go to: https://github.com/settings/tokens
    token: "{{ ocp4_workload_industrial_edge_gitea_token }}"

  # Secret used for S3 functionality in manuela-data-lake
  # Create a file with the following:
  #
  #  s3.accessKey: KEY
  #  s3.secretKey: secret key
  #
  # s3Secret: base64 encrypted value of the above file
  # e.g. cat s3creds.txt | base64

  aws:
    s3Secret: BASE64STRING