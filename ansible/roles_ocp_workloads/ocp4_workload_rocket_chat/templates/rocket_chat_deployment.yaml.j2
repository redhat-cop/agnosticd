---
apiVersion: v1
kind: PersistentVolumeClaim
metadata:
  name: rocketchat-data-claim
  namespace: "{{ ocp4_workload_rocket_chat_namespace }}"
spec:
  accessModes:
    - ReadWriteOnce
  resources:
    requests:
      storage: 10Gi
---
apiVersion: v1
kind: PersistentVolumeClaim
metadata:
  name: rocketchat-data-claim1
  namespace: "{{ ocp4_workload_rocket_chat_namespace }}"
spec:
  accessModes:
    - ReadWriteOnce
  resources:
    requests:
      storage: 10Gi
---
apiVersion: v1
kind: PersistentVolumeClaim
metadata:
  name: rocketchat-data-claim2
  namespace: "{{ ocp4_workload_rocket_chat_namespace }}"
spec:
  accessModes:
    - ReadWriteOnce
  resources:
    requests:
      storage: 10Gi      
---
apiVersion: v1
kind: Service
metadata:
  name: rocket-chat-db
  namespace: "{{ ocp4_workload_rocket_chat_namespace }}"
spec:
  ports:
    - protocol: TCP
      port: 27017
      targetPort: 27017
  selector:
    app: rocketchat-db
---
apiVersion: v1
kind: Service
metadata:
  name: rocket-chat
  namespace: "{{ ocp4_workload_rocket_chat_namespace }}"
spec:
  ports:
    - protocol: TCP
      port: 3000
      targetPort: 3000
  selector:
    app: rocketchat
---
kind:     DeploymentConfig
apiVersion:  apps.openshift.io/v1
metadata:
  name: rocketchat-db
  labels:
    app: rocketchat-db
  namespace: "{{ ocp4_workload_rocket_chat_namespace }}"
spec:
  replicas: 1
  selector:
    app: rocketchat-db
  strategy:
    type: Recreate
    recreateParams:
      post:
        failurePolicy: ignore
        execNewPod:
          volumes:
            - rocketchat-data-vol1
          containerName: rocketchat-db
          command:
            - /bin/sh
            - -c
            - "sleep 60 && mongo rocket-chat-db:27017 --eval \"rs.initiate({_id: 'rs0', members: [{_id:0, host:'localhost:27017'}]})\""
  template:
    metadata:
      labels:
        app: rocketchat-db
    spec:
      containers:
        - name: rocketchat-db
          image: docker.io/mongo:4.0
          command:
            - /bin/sh
            - -c 
            - mongod --bind_ip 0.0.0.0 --port 27017 --smallfiles --oplogSize 128 --replSet rs0 --storageEngine=mmapv1
          volumeMounts:
            - name: rocketchat-data-vol2
              mountPath: /data/db
          ports:
            - containerPort: 27017
              protocol: TCP
      restartPolicy: Always
      volumes:
        - name: rocketchat-data-vol1
          persistentVolumeClaim:
            claimName: rocketchat-data-claim1
        - name: rocketchat-data-vol2
          persistentVolumeClaim:
            claimName: rocketchat-data-claim2
---
kind:     DeploymentConfig
apiVersion:  apps.openshift.io/v1
metadata:
  name: rocketchat
  namespace: "{{ ocp4_workload_rocket_chat_namespace }}"
  labels:
    app: rocketchat
spec:
  replicas: 1
  selector:
    app: rocketchat
  template:
    metadata:
      labels:
        app: rocketchat
    spec:
      containers:
        - name: rocketchat
          image: rocket.chat:2.4.9
          env:
            - name: MONGO_URL
              value: "mongodb://rocket-chat-db:27017/rocketchat"
            - name: MONGO_OPLOG_URL
              value: "mongodb://rocket-chat-db:27017/local"
            - name: PORT
              value: "3000"
            - name: ADMIN_USERNAME
              value: "admin"
            - name: ADMIN_PASS
              value: "admin"
            - name: ADMIN_EMAIL
              value: "admin@example.com" 
          ports:
            - containerPort: 3000
              protocol: TCP
          resources:
            requests:
              cpu: 100m
      restartPolicy: Always
---
apiVersion: route.openshift.io/v1
kind: Route
metadata:
  name: rocket-chat
  namespace: "{{ ocp4_workload_rocket_chat_namespace }}"
spec:
  port:
    targetPort: 3000
  to:
    kind: Service
    name: rocket-chat
    weight: 100
  wildcardPolicy: None