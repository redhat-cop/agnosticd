apiVersion: k8s.nginx.org/v1alpha1
kind: NginxIngressController
metadata:
  name: {{controller_name}}
  namespace: {{controller_namespace}}
spec:
  ingressClass: nginx
  serviceType: LoadBalancer
  nginxPlus: false
  type: deployment
  image:
    pullPolicy: Always
    repository: {{controller_image_location}}
    tag: {{controller_tag}}
