---
apiVersion: argoproj.io/v1alpha1
kind: ArgoCD
metadata:
  name: openshift-gitops
  namespace: openshift-gitops
spec:
{% if openshift_gitops_rbac_update | default(false) | bool %}
  rbac:
    policy: |
      {{ openshift_gitops_rbac_policy | indent(6) }}
    scopes: '{{ openshift_gitops_rbac_scopes | default(omit) }}'
{% endif %}
  applicationSet:
{% if openshift_gitops_applicationset_controller_update | default(false) | bool %}
    resources:
      limits:
        cpu: "{{ openshift_gitops_applicationset_controller_limits_cpu }}"
        memory: "{{ openshift_gitops_applicationset_controller_limits_memory }}"
      requests:
        cpu: "{{ openshift_gitops_applicationset_controller_requests_cpu }}"
        memory: "{{ openshift_gitops_applicationset_controller_requests_memory }}"
{% endif %}
  controller:
{% if openshift_gitops_controller_update | default(false) | bool %}
    resources:
      limits:
        cpu: "{{ openshift_gitops_controller_limits_cpu }}"
        memory: "{{ openshift_gitops_controller_limits_memory }}"
      requests:
        cpu: "{{ openshift_gitops_controller_requests_cpu }}"
        memory: "{{ openshift_gitops_controller_requests_memory }}"
    appSync: "{{ openshift_gitops_controller_app_sync }}"
{% endif %}
  dex:
{% if openshift_gitops_dex_update | default(false) | bool %}
    resources:
      limits:
        cpu: "{{ openshift_gitops_dex_limits_cpu }}"
        memory: "{{ openshift_gitops_dex_limits_memory }}"
      requests:
        cpu: "{{ openshift_gitops_dex_requests_cpu }}"
        memory: "{{ openshift_gitops_dex_requests_memory }}"
{% endif %}
  redis:
{% if openshift_gitops_redis_update | default(false) | bool %}
    resources:
      limits:
        cpu: "{{ openshift_gitops_redis_limits_cpu }}"
        memory: "{{ openshift_gitops_redis_limits_memory }}"
      requests:
        cpu: "{{ openshift_gitops_redis_requests_cpu }}"
        memory: "{{ openshift_gitops_redis_requests_memory }}"
{% endif %}
  repo:
{% if openshift_gitops_repo_update | default(false) | bool %}
    resources:
      limits:
        cpu: "{{ openshift_gitops_repo_limits_cpu }}"
        memory: "{{ openshift_gitops_repo_limits_memory }}"
      requests:
        cpu: "{{ openshift_gitops_repo_requests_cpu }}"
        memory: "{{ openshift_gitops_repo_requests_memory }}"
{% endif %}
  server:
{% if openshift_gitops_server_update | default(false) | bool %}
    resources:
      limits:
        cpu: "{{ openshift_gitops_server_limits_cpu }}"
        memory: "{{ openshift_gitops_server_limits_memory }}"
      requests:
        cpu: "{{ openshift_gitops_server_requests_cpu }}"
        memory: "{{ openshift_gitops_server_requests_memory }}"
{% endif %}
{% if openshift_gitops_update_route_tls | bool %}
    insecure: true
    route:
      enabled: true
      tls:
        termination: edge
        insecureEdgeTerminationPolicy: Redirect
{% endif %}
{% if openshift_gitops_resource_customizations | length > 0 %}
  resourceCustomizations: |
    {{ openshift_gitops_resource_customizations | regex_replace("\n(?!$)", "\n    ") }}
{% endif %}
