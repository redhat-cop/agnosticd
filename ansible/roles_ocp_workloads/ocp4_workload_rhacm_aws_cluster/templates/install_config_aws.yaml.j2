apiVersion: v1
metadata:
  name: '{{ cluster_name }}'
baseDomain: {{ ocp4_base_domain }}
controlPlane:
  hyperthreading: Enabled
  name: master
  replicas: 3
  platform:
    aws:
      rootVolume:
        iops: 4000
        size: 100
        type: io1
      type: m5.4xlarge
compute:
- hyperthreading: Enabled
  name: 'worker'
  replicas: 0
  platform:
    aws:
      rootVolume:
        iops: 2000
        size: 100
        type: io1
      type: m5.xlarge
networking:
  networkType: OpenShiftSDN
  clusterNetwork:
  - cidr: 10.128.0.0/14
    hostPrefix: 23
  machineNetwork:
  - cidr: 10.0.0.0/16
  serviceNetwork:
  - 172.30.0.0/16
platform:
  aws:
    region: {{ aws_cluster_region }}
pullSecret: {{ ocp4_token }}
sshKey: {{ ssh_publickey }}
