apiVersion: hive.openshift.io/v1
kind: MachinePool
metadata:
  name: {{ cluster_name }}-worker
  namespace: {{ cluster_name }}
spec:
  skipMachinePools: true
  clusterDeploymentRef:
    name: {{ cluster_name }}
  name: worker
  platform:
    azure:
      osDisk:
        diskSizeGB: 128
      type: Standard_D2s_v3
      zones:
      - "1"
  replicas: 0
