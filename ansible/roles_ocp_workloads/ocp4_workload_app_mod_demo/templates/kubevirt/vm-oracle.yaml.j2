---
apiVersion: kubevirt.io/v1
kind: VirtualMachine
metadata:
  name: oracle
  namespace: {{ ocp4_workload_app_mod_demo_legacy_namespace }}
  labels:
    app.kubernetes.io/name: oracle
    app.kubernetes.io/part-of: vms
    app.openshift.io/runtime: kubevirt
spec:
  running: true
  template:
    metadata:
      annotations:
        vm.kubevirt.io/flavor: medium
        vm.kubevirt.io/os: rhel8
        vm.kubevirt.io/workload: server
      labels:
        kubevirt.io/domain: oracle
        kubevirt.io/size: medium
        app.kubernetes.io/name: oracle
    spec:
      domain:
        devices:
          disks:
          - name: vol-0
            disk:
              bus: virtio
          - name: cloudinitdisk
            disk:
              bus: virtio
          interfaces:
          - name: default
            masquerade: {}
        resources:
          requests:
            cpu: 2
            memory: 4Gi
      networks:
      - name: default
        pod: {}
      nodeSelector:
        node-role.kubernetes.io/metal: ""
      tolerations:
      - key: metal
        operator: Exists
      volumes:
      - name: vol-0
        dataVolume:
          name: oracle
      - cloudInitNoCloud:
          userData: |-
            #cloud-config
            user: cloud-user
            password: openshift
            chpasswd: { expire: False }
            ssh_pwauth: true
        name: cloudinitdisk
  dataVolumeTemplates:
  - metadata:
      name: oracle
    spec:
      storage:
        resources:
          requests:
            storage: 40Gi
      source:
        http:
          url: {{ ocp4_workload_app_mod_demo_kubevirt_image_oracle }}
