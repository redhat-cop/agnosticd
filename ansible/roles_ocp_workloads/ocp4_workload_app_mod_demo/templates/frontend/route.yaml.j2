---
apiVersion: route.openshift.io/v1
kind: Route
metadata:
  name: frontend
  namespace: {{ frontend_namespace }}
  labels:
    app.kubernetes.io/name: frontend
spec:
  port:
    targetPort: web
  tls:
    insecureEdgeTerminationPolicy: Redirect
    termination: edge
  to:
    kind: Service
    name: frontend
    weight: 100
  wildcardPolicy: None
