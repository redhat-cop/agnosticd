---
apiVersion: v1
kind: PersistentVolumeClaim
metadata:
  name: {{ postgresql_service_name }}
  namespace: {{ ocp4_workload_app_mod_demo_modern_namespace }}
  labels:
    app.kubernetes.io/name: {{ postgresql_service_name }}
spec:
  accessModes:
  - ReadWriteOnce
  resources:
    requests:
      storage: {{ postgresql_pvc_storage | default('1Gi') }}
