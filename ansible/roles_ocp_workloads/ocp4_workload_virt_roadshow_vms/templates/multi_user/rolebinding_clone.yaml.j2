{% for user_number in range(1, ocp4_workload_virt_roadshow_vms_num_users | int + 1) %}
---
apiVersion: rbac.authorization.k8s.io/v1
kind: RoleBinding
metadata:
  name: allow-clone-{{ ocp4_workload_virt_roadshow_vms_userbase }}{{ user_number }}
  namespace: {{ ocp4_workload_virt_roadshow_vms_namespace }}
subjects:
- kind: ServiceAccount
  name: default
  namespace: {{ ocp4_workload_virt_roadshow_vms_base_namespace }}{{ ocp4_workload_virt_roadshow_vms_userbase }}{{ user_number }}
roleRef:
  kind: ClusterRole
  name: datavolume-cloner 
  apiGroup: rbac.authorization.k8s.io
{% endfor %}
