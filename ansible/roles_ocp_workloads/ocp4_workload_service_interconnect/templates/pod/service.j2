[Unit]
Description=Podman siconnect_{{ item.name }} Service
Documentation=man:podman-generate-systemd(1)
Wants=network.target
After=network-online.target

[Service]
Environment=PODMAN_SYSTEMD_UNIT=%n
Restart=on-failure
ExecStart=/usr/bin/podman-compose -f /opt/podman/service_interconnect/{{ item.name  }}/podman-compose.yml up -d
ExecStop=/usr/bin/podman-compose -f /opt/podman/service_interconnect/{{ item.name  }}/podman-compose.yml down
KillMode=none
Type=forking
TimeoutSec=900

[Install]
WantedBy=multi-user.target default.target
