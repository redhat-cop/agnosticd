---
kind: Project
apiVersion: project.openshift.io/v1
metadata:
  name: aws
  labels:
    kubernetes.io/metadata.name: aws
spec:
  finalizers:
    - kubernetes

---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: patient-portal-frontend
  namespace: aws
spec:
  selector:
    matchLabels:
      app: patient-portal-frontend
  replicas: 1
  template:
    metadata:
      labels:
        app: patient-portal-frontend
    spec:
      containers:
        - name: patient-portal-frontend
          image: quay.io/redhatintegration/patient-portal-frontend:devnation-v2
          ports:
            - containerPort: 8080
          env:
            - name: DATABASE_SERVICE_HOST
              value: database
            - name: PAYMENT_PROCESSOR_SERVICE_PORT
              value: "8080"
            - name: PAYMENT_PROCESSOR_SERVICE_HOST
              value: payment-processor

---
apiVersion: v1
kind: Service
metadata:
  name: patient-portal-frontend
  namespace: aws
spec:
  selector:
    app: patient-portal-frontend
  ports:
    - port: 8080
---
apiVersion: route.openshift.io/v1
kind: Route
metadata:
  name: patient-portal-frontend
  namespace: aws
spec:
  to:
    kind: Service
    name: patient-portal-frontend
  port:
    targetPort: 8080
  tls:
    termination: edge
    insecureEdgeTerminationPolicy: Redirect