apiVersion: v1
kind: Secret
metadata:
  name: gitea-token
  namespace: {{ t_project_name_pipelines }}
  annotations:
    tekton.dev/git-0: {{ _git_url_user }}
type: kubernetes.io/basic-auth
data:
  username: {{ _gitea_token_username | b64encode }}
  password: {{ _gitea_token_password | b64encode }}
