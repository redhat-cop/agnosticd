---
apiVersion: tekton.dev/v1beta1
kind: Pipeline
metadata:
  name: quarkus-superheroes
  namespace: "{{ t_project_name_pipelines }}"
spec:
  params:
  - name: APP_NAME
    type: string
    description: The application deployment name
    default: {{ _app_name }}
  - name: SOURCE_GIT_URL
    type: string
    description: The application git repository url
    default: {{ _source_git_url }}
  - name: SOURCE_GIT_REVISION
    type: string
    default: {{ _source_git_revision }}
    description: The application git repository revision
  - name: SOURCE_GIT_CONTEXT_DIR
    type: string
    default: {{ _app_name }}
    description: The subdirectory in the git repository
  - name: NAMESPACE
    type: string
    description: Namespace where the buildconfig is located
    default: {{ t_project_name_test }}

  workspaces:
  - name: app-source
  - name: maven-settings

  tasks:

  - name: git-clone
    taskRef:
      kind: ClusterTask
      name: git-clone
    params:
    - name: url
      value: $(params.SOURCE_GIT_URL)
    - name: revision
      value: $(params.SOURCE_GIT_REVISION)
    - name: deleteExisting
      value: 'true'
    workspaces:
    - name: output
      workspace: app-source

  - name: maven-build
    runAfter:
    - git-clone
    taskRef:
      kind: ClusterTask
      name: maven
    params:
    - name: MAVEN_IMAGE
      value: registry.access.redhat.com/ubi8/openjdk-11:1.3
    - name: CONTEXT_DIR
      value: $(params.SOURCE_GIT_CONTEXT_DIR)
    - name: GOALS
      value:
      - clean
      - compile
      - package
      - -DskipTests
      - -Dquarkus.package.type=uber-jar
    workspaces:
    - name: source
      workspace: app-source
    - name: maven-settings
      workspace: maven-settings

  - name: build-image
    runAfter:
    - maven-build
    taskRef:
      kind: Task
      name: s2i-binary
    params:
    - name: FROM_FILE
      value: $(params.SOURCE_GIT_CONTEXT_DIR)/target/$(params.APP_NAME)-1.0-runner.jar
    - name: NAMESPACE
      value: $(params.NAMESPACE)
    - name: BUILDCONFIG
      value: $(params.APP_NAME)
    workspaces:
    - name: source
      workspace: app-source
