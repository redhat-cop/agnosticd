---
apiVersion: habana.ai/v1
kind: DeviceConfig
metadata:
  name: habana-ai-deviceconfig-instance
  namespace: {{ habana_gaudi_operator_namespace }}
spec:
  devicePlugin:
    image: vault.habana.ai/docker-k8s-device-plugin/docker-k8s-device-plugin
    version: {{ habana_gaudi_deviceplugin_version }}
  driver:
    image: vault.habana.ai/habana-ocp-operator/{{ habana_gaudi_image_version }}/habana-ai-driver
    version: {{ habana_gaudi_driver_version }}
  habanaRuntime:
    image: vault.habana.ai/habana-ocp-operator/{{ habana_gaudi_image_version }}/habana-runtime
    version: {{ habana_gaudi_runtime_version }}
  nodeMetrics:
    image: vault.habana.ai/gaudi-metric-exporter/metric-exporter
    version: {{ habana_gaudi_nodemetrics_version }}
