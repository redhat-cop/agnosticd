apiVersion: v1
kind: Secret
metadata:
  name: config-bundle
  namespace: "{{ ocp4_workload_quay_operator_operator_namespace }}"
data:
  config.yaml: "{{ _ocp4_workload_quay_operator_config_yaml | b64encode }}"
{% if _ocp4_workload_quay_operator_ssl_certificate | default("") | length > 0 %}
  ssl.cert: "{{ _ocp4_workload_quay_operator_ssl_certificate }}"
{% endif %}
{% if _ocp4_workload_quay_operator_ssl_key | default("") | length > 0 %}
  ssl.key: "{{ _ocp4_workload_quay_operator_ssl_key }}"
{% endif %}
