apiVersion: argoproj.io/v1alpha1
kind: Application
metadata:
  name: guides
  namespace: openshift-gitops
spec:
  project: default
  source:
    repoURL: {{ ocp4_workload_acc_new_app_dev_guides_repo_url }}
    targetRevision: {{ ocp4_workload_acc_new_app_dev_guides_repo_revision }}
    path: {{ ocp4_workload_acc_new_app_dev_guides_repo_path }}
    helm:
      values: |
        namespace: {{ ocp4_workload_acc_new_app_dev_guides_namespace }}
        image: {{ ocp4_workload_acc_new_app_dev_guides_image }}
  destination:
    namespace: {{ ocp4_workload_acc_new_app_dev_guides_namespace }}
    server: https://kubernetes.default.svc
  syncPolicy:
    automated: {}
