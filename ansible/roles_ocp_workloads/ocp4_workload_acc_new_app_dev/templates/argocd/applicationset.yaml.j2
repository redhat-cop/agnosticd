---
apiVersion: argoproj.io/v1alpha1
kind: ApplicationSet
metadata:
  name: argocd
  namespace: openshift-gitops
spec:
  generators:
  - list:
      elements:
{% for n in range(1, ocp4_workload_acc_new_app_dev_user_count | int + 1 ) %}
      - user: {{ ocp4_workload_acc_new_app_dev_user_prefix }}{{ n }}
{% endfor %}
  template:
    metadata:
      name: 'argocd-{% raw %}{{ user }}{% endraw %}'
      namespace: openshift-gitops
      finalizers:
      - resources-finalizer.argocd.argoproj.io
    spec:
      project: default
      source:
        repoURL: http://{{ ocp4_workload_acc_new_app_dev_gitea_instance }}.{{ ocp4_workload_acc_new_app_dev_gitea_project }}.svc:3000/{% raw %}{{ user }}{% endraw %}/{{ ocp4_workload_acc_new_app_dev_gitea_repo }}
        targetRevision: {{ ocp4_workload_acc_new_app_dev_gitea_revision }}
        path: argocd
        helm:
          values: |
            argocdNamespace: '{{ ocp4_workload_acc_new_app_dev_argocd_namespace_prefix }}{% raw %}{{ user }}{% endraw %}'
            namespacePermissions:
              user: '{% raw %}{{ user }}{% endraw %}'
              role: edit
      destination:
        server: https://kubernetes.default.svc
      syncPolicy:
        automated:
          prune: false
          selfHeal: false
