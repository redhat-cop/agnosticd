apiVersion: operators.coreos.com/v1alpha1
kind: Subscription
metadata:
  labels:
    operators.coreos.com/opendatahub-operator.openshift-operators: ""
  name: {{ ocp4_workload_openshift_ai_operator_name }}
  namespace: {{ ocp4_workload_openshift_ai_namespace }}
spec:
  channel: {{ ocp4_workload_openshift_ai_channel }}
{% if install_openshift_ai_operator_automatic_install_plan_approval | default(true) | bool %}
  installPlanApproval: Automatic
{% else %}
  installPlanApproval: Manual
{% endif %}  
  name: {{ ocp4_workload_openshift_ai_operator_name }}
  source: {{ ocp4_workload_openshift_ai_source }}
  sourceNamespace: {{ ocp4_workload_openshift_ai_sourceNamespace }}
  startingCSV: {{ ocp4_workload_openshift_ai_startingCSV }}