---
kind: DeploymentConfig
apiVersion: v1
metadata:
  name: {{ ocp4_workload_dm7_foundations_elt_dm_bc_dc }}
  annotations:
    template.alpha.openshift.io/wait-for-ready: "true"
spec:
  strategy:
    type: Recreate
  triggers:
    - type: ImageChange
      imageChangeParams:
        automatic: true
        containerNames:
          - dm-dc
        from:
          kind: ImageStreamTag
          name: {{ ocp4_workload_dm7_foundations_elt_dm_bc_image }}
    - type: ConfigChange
  replicas: 1
  selector:
    deploymentConfig: {{ ocp4_workload_dm7_foundations_elt_dm_bc_dc }}
  template:
    metadata:
      name: {{ ocp4_workload_dm7_foundations_elt_dm_bc_dc }}
      labels:
        deploymentConfig: {{ ocp4_workload_dm7_foundations_elt_dm_bc_dc }}
    spec:
      containers:
        - name: dm-dc
          image: 
          imagePullPolicy: IfNotPresent
          resources:
            limits:
              cpu: '{{ ocp4_workload_dm7_foundations_elt_dm_bc_limit_cpu }}'
              memory: '{{ ocp4_workload_dm7_foundations_elt_dm_bc_limit_memory }}' 
            requests:
              cpu: '{{ ocp4_workload_dm7_foundations_elt_dm_bc_request_cpu }}'
              memory: '{{ ocp4_workload_dm7_foundations_elt_dm_bc_request_memory }}'
          volumeMounts:
            - name: dm-dc-pvol
              mountPath: "/opt/kie/data"
          livenessProbe:
            httpGet:
              path: /rest/healthy
              port: 8080
              scheme: HTTP
            initialDelaySeconds: 180
            timeoutSeconds: 2
            periodSeconds: 15
          readinessProbe:
            httpGet:
              path: /rest/ready
              port: 8080
              scheme: HTTP
            initialDelaySeconds: 30
            timeoutSeconds: 2
            periodSeconds: 5
            failureThreshold: 36
          ports:
            - name: jolokia
              containerPort: 8778
              protocol: TCP
            - name: http
              containerPort: 8080
              protocol: TCP
            - name: https
              containerPort: 8443
              protocol: TCP
          env:
            - name: JAVA_MAX_MEM_RATIO
              value: '60'
            - name: JAVA_INITIAL_MEM_RATIO
              value: '0'
            - name: GC_MAX_METASPACE_SIZE
              value: '500'
            - name: KIE_ADMIN_USER
              value: adminUser
            - name: KIE_ADMIN_PWD
              value: admin1!
            - name: KIE_MBEANS
              value: enabled
            - name: KIE_SERVER_CONTROLLER_OPENSHIFT_ENABLED
              value: 'false'
            - name: KIE_SERVER_CONTROLLER_OPENSHIFT_GLOBAL_DISCOVERY_ENABLED
              value: 'false'
            - name: KIE_SERVER_CONTROLLER_OPENSHIFT_PREFER_KIESERVER_SERVICE
              value: 'true'
            - name: KIE_SERVER_CONTROLLER_TEMPLATE_CACHE_TTL
              value: '60000'
            - name: WORKBENCH_ROUTE_NAME
              value: {{ ocp4_workload_dm7_foundations_elt_dm_bc_route }}"
            - name: KIE_SERVER_CONTROLLER_USER
              value: controllerUser
            - name: KIE_SERVER_CONTROLLER_PWD
              value: controller1!
            - name: KIE_MAVEN_USER
              value: adminUser
            - name: KIE_MAVEN_PWD
              value: admin1!
            - name: ADMIN_USERNAME
              value: eapadmin
            - name: ADMIN_PASSWORD
              value: eapadmin1!
            - name: JGROUPS_PING_PROTOCOL
              value: "openshift.DNS_PING"
            - name: OPENSHIFT_DNS_PING_SERVICE_NAME
              value: {{ ocp4_workload_dm7_foundations_elt_dm_bc_service_ping }}
            - name: OPENSHIFT_DNS_PING_SERVICE_PORT
              value: "8888"
      dnsPolicy: ClusterFirst
      restartPolicy: Always
      schedulerName: default-scheduler
      securityContext: {}
      serviceAccount: {{ ocp4_workload_dm7_foundations_elt_dm_sa }}
      serviceAccountName: {{ ocp4_workload_dm7_foundations_elt_dm_sa }}
      terminationGracePeriodSeconds: 60
      volumes:
        - name: dm-dc-pvol
          persistentVolumeClaim:
            claimName: {{ ocp4_workload_dm7_foundations_elt_dm_bc_pvc }}