---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: {{ ocp4_workload_pam_case_mgmt_exp_elt_nexus_deployment }}
  labels:
    app: nexus  
spec:
  progressDeadlineSeconds: 600
  replicas: 1
  revisionHistoryLimit: 10
  selector:
    matchLabels:
      app: {{ ocp4_workload_pam_case_mgmt_exp_elt_nexus_deployment }}
  strategy:
    rollingUpdate:
      maxSurge: 1
      maxUnavailable: 1
    type: RollingUpdate
  template:
    metadata:
      creationTimestamp: null
      labels:
        app: {{ ocp4_workload_pam_case_mgmt_exp_elt_nexus_deployment }}
    spec:
      containers:
        - env:
            - name: CONTEXT_PATH
              value: /
          image: '{{ ocp4_workload_pam_case_mgmt_exp_elt_nexus_image }}'
          imagePullPolicy: IfNotPresent
          livenessProbe:
            exec:
              command:
                - echo
                - ok
            failureThreshold: 3
            initialDelaySeconds: 300
            periodSeconds: 10
            successThreshold: 1
            timeoutSeconds: 1
          name: nexus
          ports:
            - containerPort: 8081
              protocol: TCP
          readinessProbe:
            failureThreshold: 3
            httpGet:
              path: /content/groups/public/
              port: 8081
              scheme: HTTP
            initialDelaySeconds: 3
            periodSeconds: 10
            successThreshold: 1
            timeoutSeconds: 1
          resources:
            limits:
              cpu: {{ocp4_workload_pam_case_mgmt_exp_elt_nexus_limit_cpu }}
              memory: {{ ocp4_workload_pam_case_mgmt_exp_elt_nexus_limit_memory }}
            requests:
              cpu: {{ ocp4_workload_pam_case_mgmt_exp_elt_nexus_request_cpu }}
              memory: {{ ocp4_workload_pam_case_mgmt_exp_elt_nexus_request_memory }}
          terminationMessagePath: /dev/termination-log
          terminationMessagePolicy: File
          volumeMounts:
            - mountPath: /sonatype-work
              name: nexus-data
      dnsPolicy: ClusterFirst
      restartPolicy: Always
      schedulerName: default-scheduler
      securityContext: {}
      terminationGracePeriodSeconds: 30
      volumes:
        - name: nexus-data
          persistentVolumeClaim:
            claimName: {{ ocp4_workload_pam_case_mgmt_exp_elt_nexus_pvc }}
