apiVersion: keycloak.org/v1alpha1
kind: KeycloakRealm
metadata:
  name: backstage
  labels:
    app: backstage
spec:
  instanceSelector:
    matchLabels:
      app: sso
  realm:
    displayName: Backstage Authentication Realm
    enabled: true
    id: backstage
    identityProviders:
      - alias: GitLab
        providerId: oidc
        enabled: true
        trustEmail: true
        firstBrokerLoginFlowAlias: first broker login
        config:
          clientId: {{ ocp4_workload_trusted_application_pipeline_keycloak_client_id }}
          tokenUrl: https://{{ ocp4_workload_trusted_application_pipeline_gitlab_host }}/oauth/token
          authorizationUrl: https://{{ ocp4_workload_trusted_application_pipeline_gitlab_host }}/oauth/authorize
          clientAuthMethod: client_secret_basic
          syncMode: IMPORT
          clientSecret: {{ ocp4_workload_trusted_application_pipeline_keycloak_client_secret }}
          useJwksUrl: 'true'
    realm: backstage