apiVersion: rbac.authorization.k8s.io/v1
kind: RoleBinding
metadata:
  name: "{{ ocp_username }}-view"
  namespace: "{{ item.project }}"
roleRef:
  apiGroup: rbac.authorization.k8s.io
  kind: ClusterRole
  name: "{{ item.role }}"
subjects:
- apiGroup: rbac.authorization.k8s.io
  kind: User
  name: "{{ ocp_username }}"
