apiVersion: rbac.authorization.k8s.io/v1
kind: RoleBinding
metadata:
  name: 'argo-{{ user }}'
  namespace: '{{ namespace }}'
subjects:
  - kind: ServiceAccount
    name: 'globex-gitops-{{ user }}-argocd-application-controller'
    namespace: '{{ namespace }}'
roleRef:
  kind: ClusterRole
  name: '{{ role }}'
  apiGroup: rbac.authorization.k8s.io

