---
apiVersion: v1
kind: PersistentVolumeClaim
metadata:
  name: "{{ ocp4_workload_codeserver_name }}"
  namespace: "{{ _ocp4_workload_codeserver_namespace }}"
  labels:
    app: "{{ ocp4_workload_codeserver_name }}"
spec:
  accessModes:
  - ReadWriteOnce
{% if ocp4_workload_codeserver_storageclass | default("") | length > 0 %}
  storageClassName:" {{ ocp4_workload_codeserver_storageclass }}"
{% endif %}
  resources:
    requests:
      storage: "{{ ocp4_workload_codeserver_pvc_size }}"
