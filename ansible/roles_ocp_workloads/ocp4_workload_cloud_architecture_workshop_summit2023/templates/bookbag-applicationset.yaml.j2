---
apiVersion: argoproj.io/v1alpha1
kind: ApplicationSet
metadata:
  name: {{ ocp4_workload_cloud_architecture_workshop_bookbag_applicationset_name }}
  namespace: {{ ocp4_workload_cloud_architecture_workshop_bookbag_applicationset_namespace }}
spec:
  generators:
  - list:
      elements:
{% for n in range(1, ocp4_workload_cloud_architecture_workshop_user_count | int + 1 ) %}
      - user: {{ ocp4_workload_cloud_architecture_workshop_user_prefix }}{{ n }}
{% endfor %}
  template:
    metadata:
      name: "{{ ocp4_workload_cloud_architecture_workshop_bookbag_application_name }}-{% raw %}{{ user }}{% endraw %}"
      namespace: {{ ocp4_workload_cloud_architecture_workshop_bookbag_applicationset_namespace }}
      finalizers:
      - resources-finalizer.argocd.argoproj.io
    spec:
      destination:
        name: ""
        namespace: "{{ ocp4_workload_cloud_architecture_workshop_bookbag_namespace_prefix }}-{% raw %}{{ user }}{% endraw %}"
        server: 'https://kubernetes.default.svc'
      project: default
      syncPolicy:
        automated:
          prune: false
          selfHeal: false
      source:
        repoURL: {{ ocp4_workload_cloud_architecture_workshop_bookbag_application_repo }}
        targetRevision: {{ ocp4_workload_cloud_architecture_workshop_bookbag_application_repo_tag }}
        path: {{ ocp4_workload_cloud_architecture_workshop_bookbag_application_repo_path }}
        helm:
          values: |
            image:
              pullPolicy: Always
              tag: work
            bookbagVariables: >-
              {"openshift_cluster_console": "https://{{ r_console_route.resources[0].spec.host }}",
              "user_name": "{% raw %}{{ user }}{% endraw %}",
              "user_password": "{{ ocp4_workload_authentication_htpasswd_user_password }}",
              "globex_web_url": "https://globex-web-{{ ocp4_workload_cloud_architecture_workshop_namespace_prefix }}-{% raw %}{{ user }}{% endraw %}.{{ r_openshift_subdomain }}",
              "kafdrop_url": "https://kafdrop-{{ ocp4_workload_cloud_architecture_workshop_namespace_prefix }}-mw-{% raw %}{{ user }}{% endraw %}.{{ r_openshift_subdomain }}",
              "activity_tracking_simulator_url": "https://activity-tracking-simulator-{{ ocp4_workload_cloud_architecture_workshop_namespace_prefix }}-{% raw %}{{ user }}{% endraw %}.{{ r_openshift_subdomain }}",
              "devspaces_dashboard":"https://devspaces.{{ r_openshift_subdomain }}",
              "globex_user_password":"{{ ocp4_workload_cloud_architecture_workshop_globex_user_password }}"}
