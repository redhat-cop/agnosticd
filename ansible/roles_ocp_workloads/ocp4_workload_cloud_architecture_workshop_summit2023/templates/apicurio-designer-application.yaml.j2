apiVersion: argoproj.io/v1alpha1
kind: Application
metadata:
  name: {{ ocp4_workload_cloud_architecture_workshop_apicurio_application_name }}
  namespace: {{ ocp4_workload_cloud_architecture_workshop_apicurio_application_namespace }}
  finalizers:
  - resources-finalizer.argocd.argoproj.io/foreground
spec:
  destination:
    name: ""
    namespace: {{ ocp4_workload_cloud_architecture_workshop_apicurio_namespace }}
    server: 'https://kubernetes.default.svc'
  project: default
  syncPolicy:
    automated:
      prune: false
      selfHeal: false
  source:
    repoURL: {{ ocp4_workload_cloud_architecture_workshop_apicurio_gitops_repo }}
    targetRevision: {{ ocp4_workload_cloud_architecture_workshop_apicurio_gitops_repo_tag }}
    path: {{ ocp4_workload_cloud_architecture_workshop_apicurio_gitops_repo_path}}
    helm:
      values: |

        replicaCount: {{ ocp4_workload_cloud_architecture_workshop_apicurio_replicas }}

        apicurito:
          generatorHost: {{ ocp4_workload_cloud_architecture_workshop_apicurio_generator_host }}.{{ r_openshift_subdomain }}
          uiHost: {{ ocp4_workload_cloud_architecture_workshop_apicurio_ui_host }}.{{ r_openshift_subdomain }}
