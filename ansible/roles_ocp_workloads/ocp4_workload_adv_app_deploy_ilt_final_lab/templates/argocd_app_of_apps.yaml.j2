apiVersion: argoproj.io/v1alpha1
kind: Application
metadata:
  name: coffee-shop-app-of-apps
  namespace: "{{ guid }}-argocd"
spec:
  destination:
    namespace: "{{ guid }}-argocd"
    server: https://kubernetes.default.svc
  project: coffee-shop
  source:
    path: ./coffee-shop-argocd
    repoURL: http://{{ ocp4_workload_adv_app_deploy_ilt_final_lab_gitea_service }}/{{ ocp4_workload_adv_app_deploy_ilt_final_lab_gitea_user }}/coffee-shop-final-lab.git
    targetRevision: HEAD
  syncPolicy:
    automated:
      selfHeal: true
