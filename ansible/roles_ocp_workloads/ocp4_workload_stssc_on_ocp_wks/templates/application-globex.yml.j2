apiVersion: argoproj.io/v1alpha1
kind: Application
metadata:
  name: globex
  namespace: openshift-gitops
spec:
  destination:
    namespace: globex
    server: 'https://kubernetes.default.svc'
  ignoreDifferences:
    - group: '*'
      jqPathExpressions:
        - '.imagePullSecrets[] | select(.name|test(".-dockercfg-."))'
      kind: ServiceAccount
  project: default
  source:
    path: gitops/globex/overlays/dev
    repoURL: {{ _internal_manifest_repo }}
    targetRevision: HEAD
  syncPolicy:
    automated:
      selfHeal: true
    syncOptions:
      - RespectIgnoreDifferences=true
      - CreateNamespace=true
    status: Synced
