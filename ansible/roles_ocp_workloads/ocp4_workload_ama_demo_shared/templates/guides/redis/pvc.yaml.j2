---
apiVersion: v1
kind: PersistentVolumeClaim
metadata:
  name: "{{ ocp4_workload_ama_demo_shared_guides_user_selector_redis_name }}"
  namespace: "{{ ocp4_workload_ama_demo_shared_guides_user_selector_redis_namespace }}"
spec:
  accessModes:
  - ReadWriteOnce
{% if ocp4_workload_ama_demo_shared_guides_user_selector_redis_pvc_storage_class | default("") | length > 0 %}
  storageClassName: {{ ocp4_workload_ama_demo_shared_guides_user_selector_redis_pvc_storage_class }}
{% endif %}
  resources:
    requests:
      storage: "{{ ocp4_workload_ama_demo_shared_guides_user_selector_redis_pvc_size }}"
