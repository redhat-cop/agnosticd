---
apiVersion: agent.open-cluster-management.io/v1
kind: KlusterletAddonConfig
metadata:
  name: {{ ocp4_workload_deploy_hosted_cluster_name }}
  namespace: {{ ocp4_workload_deploy_hosted_cluster_name }}
spec:
  clusterName: {{ ocp4_workload_deploy_hosted_cluster_name }}
  clusterNamespace: {{ ocp4_workload_deploy_hosted_cluster_name }}
  clusterLabels:
    cloud: auto-detect
    vendor: auto-detect
  applicationManager:
    enabled: true
  certPolicyController:
    enabled: true
  iamPolicyController:
    enabled: true
  policyController:
    enabled: true
  searchCollector:
    enabled: false
