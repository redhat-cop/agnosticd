{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "AllowCreateTable",
      "Effect": "Allow",
      "Action": "dynamodb:CreateTable",
      "Resource": "arn:aws:dynamodb:{{ aws_region }}:{{ student_aws_account_id }}:table/microsweeper-scores-{{ guid }}"
    },
    {
      "Sid": "AllowScan",
      "Effect": "Allow",
      "Action": "dynamodb:Scan",
      "Resource": "arn:aws:dynamodb:{{ aws_region }}:{{ student_aws_account_id }}:table/microsweeper-scores-{{ guid }}"
    },
    {
      "Sid": "AllowPutItem",
      "Effect": "Allow",
      "Action": "dynamodb:PutItem",
      "Resource": "arn:aws:dynamodb:{{ aws_region }}:{{ student_aws_account_id }}:table/microsweeper-scores-{{ guid }}"
    },
    {
      "Sid": "AllowGetItem",
      "Effect": "Allow",
      "Action": "dynamodb:GetItem",
      "Resource": "arn:aws:dynamodb:{{ aws_region }}:{{ student_aws_account_id }}:table/microsweeper-scores-{{ guid }}"
    }
  ]
}