apiVersion: maistra.io/v2
kind: ServiceMeshControlPlane
metadata:
  name: workshop-install
  namespace: {{ namespace }}
spec:
  proxy:
    networking:
      trafficControl:
        outbound:
          policy: REGISTRY_ONLY
  tracing:
    type: Jaeger
    sampling: 25
  addons:
    jaeger:
      name: jaeger
    grafana:
      enabled: true
    kiali:
      name: kiali
      enabled: true
    prometheus:
      enabled: true