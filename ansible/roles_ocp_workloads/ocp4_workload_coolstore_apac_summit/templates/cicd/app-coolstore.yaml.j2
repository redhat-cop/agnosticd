apiVersion: argoproj.io/v1alpha1
kind: Application
metadata:
  name: coolstore-microservices
  namespace: openshift-gitops
spec:
  destination:
    namespace: coolstore
    server: 'https://kubernetes.default.svc'
  project: default
  source:
    path: coolstore/overlays/prod
    repoURL: >-
      {{ coolstore micro repo id }}
    targetRevision: HEAD
