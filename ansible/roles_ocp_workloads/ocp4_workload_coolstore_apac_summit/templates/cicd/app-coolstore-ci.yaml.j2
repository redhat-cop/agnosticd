apiVersion: argoproj.io/v1alpha1
kind: Application
metadata:
  name: coolstore-ci
  namespace: openshift-gitops
spec:
  destination:
    namespace: ci
    server: 'https://kubernetes.default.svc'
  project: default
  source:
    path: ci/overlays/prod
    repoURL: >-
      {{ coolstore ci repo }}
    targetRevision: HEAD
