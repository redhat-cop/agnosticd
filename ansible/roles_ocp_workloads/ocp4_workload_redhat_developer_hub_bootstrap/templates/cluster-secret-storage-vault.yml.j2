apiVersion: external-secrets.io/v1beta1
kind: ClusterSecretStore
metadata:
  name: vault-secret-store
spec:
  provider:
    vault:
      auth:
        kubernetes:
          mountPath: kubernetes
          role: rhdh-role
          secretRef:
            key: token
            name: {{ ocp4_workload_redhat_developer_hub_bootstrap_default_sa_token_name }}
            namespace: default
          serviceAccountRef:
            name: default
            namespace: default
      path: kv
      server: 'http://vault.vault:8200'
      version: v2