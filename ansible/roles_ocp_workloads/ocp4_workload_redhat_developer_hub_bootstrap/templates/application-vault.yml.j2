apiVersion: argoproj.io/v1alpha1
kind: Application
metadata:
  name: vault
  namespace: openshift-gitops
spec:
  destination:
    namespace: {{ ocp4_workload_redhat_developer_hub_bootstrap_vault_namespace }}
    server: 'https://kubernetes.default.svc'
  project: default
  source:
    path: charts/hashicorp-vault
    repoURL: {{ ocp4_workload_redhat_developer_hub_bootstrap_agnosticg_repo }}
    targetRevision: HEAD
  syncPolicy:
    automated: {}
    syncOptions:
      - CreateNamespace=true