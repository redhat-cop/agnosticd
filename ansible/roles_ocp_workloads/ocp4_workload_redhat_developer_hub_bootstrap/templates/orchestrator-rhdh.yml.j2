apiVersion: rhdh.redhat.com/v1alpha1
kind: Orchestrator
metadata:
  name: orchestrator-rhdh
  namespace: openshift-operators
spec:
  argocd:
    enabled: false
  orchestrator:
    namespace: {{ ocp4_workload_redhat_developer_hub_bootstrap_sonataflow_namespace }}
    sonataflowPlatform:
      resources:
        limits:
          cpu: 500m
          memory: 1Gi
        requests:
          cpu: 250m
          memory: 64Mi
  postgres:
    authSecret:
      name: sonataflow-psql-postgresql
      passwordKey: postgres-password
      userKey: postgres-username
    database: sonataflow
    serviceName: sonataflow-psql-postgresql
    serviceNamespace: {{ ocp4_workload_redhat_developer_hub_bootstrap_sonataflow_namespace }}
  rhdhOperator:
    enabled: false
  serverlessOperator:
    enabled: {{ ocp4_workload_redhat_developer_hub_bootstrap_orchestrator_serverless_operator_enabled }}
    subscription:
      channel: stable
      installPlanApproval: Automatic
      name: serverless-operator
      namespace: openshift-serverless
      sourceName: redhat-operators
  sonataFlowOperator:
    enabled: true
    isReleaseCandidate: false
    subscription:
      channel: alpha
      installPlanApproval: Automatic
      name: {{ ocp4_workload_redhat_developer_hub_bootstrap_orchestrator_serverless_operator_name }}
      namespace: openshift-serverless-logic
      sourceName: redhat-operators
      startingCSV: {{ ocp4_workload_redhat_developer_hub_bootstrap_orchestrator_serverless_operator_starting_csv }}
  tekton:
    enabled: false
