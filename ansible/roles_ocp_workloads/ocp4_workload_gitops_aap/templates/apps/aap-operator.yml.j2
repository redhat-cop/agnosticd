---
apiVersion: argoproj.io/v1alpha1
kind: Application
metadata:
  name: ansible-automation-platform
  namespace: openshift-gitops
spec:
  destination:
    namespace: ansible-automation-platform
    server: https://kubernetes.default.svc
  project: default
  source:
    directory:
      recurse: false
    path: gitops/ansible-automation-platform/operator/base/
    repoURL: https://github.com/linuxnerds/edge-hmi-demo
    targetRevision: main
  syncPolicy:
    automated:
      prune: true
      selfHeal: true