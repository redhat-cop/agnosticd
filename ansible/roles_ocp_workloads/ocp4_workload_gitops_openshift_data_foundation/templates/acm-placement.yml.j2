apiVersion: cluster.open-cluster-management.io/v1alpha1
kind: Placement
metadata:
  name: odf-{{ cluster.name }}
  namespace: {{ ocp4_workload_gitops_openshift_data_foundation_gitops_namespace }}
spec:
  clusterSets:
    - global
  predicates:
    - requiredClusterSelector:
        labelSelector:
          matchExpressions:
            - key: purpose
              operator: In
              values:
                - {{ cluster.purpose }}