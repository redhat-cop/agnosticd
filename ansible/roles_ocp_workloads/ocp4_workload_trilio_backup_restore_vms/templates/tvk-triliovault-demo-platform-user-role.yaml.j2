apiVersion: rbac.authorization.k8s.io/v1
kind: ClusterRole
metadata:
  name: triliovault-demo-platform-user
rules:
- apiGroups:
  - triliovault.trilio.io
  resources:
  - backupplans
  - backups
  - clusterbackupplans
  - clusterbackups
  - clusterrestores
  - hooks
  - policies
  - restores
  - targets
  - triliovaultmanagers
  verbs:
  - '*'
- apiGroups:
  - ""
  resources:
  - secrets
  verbs:
  - create