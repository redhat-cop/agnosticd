---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: mta-web-console-postgresql
  namespace: "{{ _ocp4_workload_mta_namespace }}"
  labels:
    application: mta-web-console
spec:
  strategy:
    type: Recreate
  replicas: 1
  selector:
    matchLabels:
      app: mta-web-console-postgresql
  template:
    metadata:
      name: mta-web-console-postgresql
      labels:
        app: mta-web-console-postgresql
        application: mta-web-console
    spec:
      terminationGracePeriodSeconds: 60
      containers:
      - name: mta-web-console-postgresql
        image: registry.redhat.io/rhel8/postgresql-13:1-40
        imagePullPolicy: Always
        ports:
        - containerPort: 5432
          protocol: TCP
        volumeMounts:
        - name: mta-web-console-postgresql-pvol
          mountPath: "/var/lib/pgsql/data"
        env:
        - name: POSTGRESQL_USER
          value: "mta"
        - name: POSTGRESQL_PASSWORD
          value: "mta"
        - name: POSTGRESQL_DATABASE
          value: "mta"
        - name: POSTGRESQL_MAX_CONNECTIONS
          value: "200"
        - name: POSTGRESQL_MAX_PREPARED_TRANSACTIONS
          value: "200"
        - name: POSTGRESQL_SHARED_BUFFERS
          value: ""
      volumes:
      - name: mta-web-console-postgresql-pvol
        persistentVolumeClaim:
          claimName: mta-web-console-postgresql-claim
