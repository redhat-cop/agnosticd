---
apiVersion: route.openshift.io/v1
kind: Route
metadata:
  name: {{ ocp4_workload_microshift_name }}-ingress
  namespace: {{ ocp4_workload_microshift_vm_namespace }}
  labels:
    app.kubernetes.io/name: {{ ocp4_workload_microshift_name }}
spec:
  host: ingress-{{ ocp4_workload_microshift_vm_namespace }}.{{ _ocp4_workload_microshift_wildcard_domain }}
  port:
    targetPort: 80
  to:
    kind: Service
    name: {{ ocp4_workload_microshift_name }}
    weight: 100
