# StackRox license key
licenseKey: |
  {{ ocp4_workload_stackrox_central_stackrox_license }}

# Configuration secrets for the Central deployment
central:
  # Administrator password for logging in to the StackRox Portal.
  # htpasswd (bcrypt) encoded for security reasons, consult the "password" file
  # that is part of the deployment bundle for the raw password.
  adminPassword:
    htpasswd: |
      {{ ocp4_workload_stackrox_central_admin_htpasswd }}
  exposure:
{% if ocp4_workload_stackrox_central_orchestrator == 'k8s' %}
    loadBalancer:
      enabled: true
{% else %}
    route:
      enabled: true
{% endif %}


imagePullSecrets:
    username: "{{ ocp4_workload_stackrox_central_imagepulluser }}"
    password: "{{ ocp4_workload_stackrox_central_imagepullpassword }}"


