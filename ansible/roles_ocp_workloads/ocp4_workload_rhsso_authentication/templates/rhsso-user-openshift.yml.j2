---
apiVersion: keycloak.org/v1alpha1
kind: KeycloakUser
metadata:
  name: {{ username }}
  namespace: {{ ocp4_workload_rhsso_authentication_namespace }}
  labels:
    app: rhsso-openshift
    app.kubernetes.io/instance: rhsso-openshift
    app.kubernetes.io/name: rhsso-openshift
spec:
  realmSelector:
    matchLabels:
      app: rhsso-openshift
      app.kubernetes.io/instance: rhsso-openshift
      app.kubernetes.io/name: rhsso-openshift
  user:
    credentials:
    - temporary: false
      type: password
      value: {{ password }}
    username: {{ username }}
    email: {{ username }}@demo.redhat.com
    enabled: true
    emailVerified: true
    {% if ocp4_workload_rhsso_authentication_openshift_realm_roles is defined -%}
    realmRoles:
    {% for role in ocp4_workload_rhsso_authentication_openshift_realm_roles -%}
    - {{ role }}
    {%- endfor %}
    {%- endif %}
