---
apiVersion: "v1"
kind: "LimitRange"
metadata:
  name: "cicd-workshop-limit"
  namespace: '{{ user }}-cicd' 
spec:
  limits:
    - type: "Pod"
      max:
        cpu: "1" 
        memory: "2Gi" 
    - type: "Container"
      max:
        cpu: "500m" 
        memory: "900Mi" 
      # default:
      #   cpu: "300m" 
      #   memory: "600Mi" 
      defaultRequest:
        cpu: "200m" 
        memory: "600Mi" 
---
apiVersion: "v1"
kind: "ResourceQuota"
metadata:
  name: 'cicd-workshop-quota'
  namespace: '{{ user }}-cicd'
spec:
  hard:
    pods: '6'
    limits.cpu: '4'
    limits.memory: '6Gi'