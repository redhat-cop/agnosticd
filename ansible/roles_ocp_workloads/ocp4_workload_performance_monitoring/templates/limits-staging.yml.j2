---
apiVersion: "v1"
kind: "LimitRange"
metadata:
  name: "staging-workshop-limit"
  namespace: '{{ user }}-staging'  
spec:
  limits:
    - type: "Pod"
      max:
        cpu: "3" 
        memory: "2Gi" 
    - type: "Container"
      max:
        cpu: "2" 
        memory: "2Gi" 
      defaultRequest:
        cpu: "200m" 
        memory: "400Mi" 
---
apiVersion: "v1"
kind: "ResourceQuota"
metadata:
  name: 'staging-workshop-quota'
  namespace: '{{ user }}-staging'  
spec:
  hard:
    pods: '12'
    limits.cpu: '14'
    limits.memory: '8Gi'