---
apiVersion: "v1"
kind: "LimitRange"
metadata:
  name: "staging-workshop-limit"
  namespace: '{{ user }}-staging'  
spec:
  limits:
    - type: "Pod"
      max:
        cpu: "5" 
        memory: "6Gi" 
    - type: "Container"
      max:
        cpu: "2" 
        memory: "4Gi" 
      defaultRequest:
        cpu: "200m" 
        memory: "400Mi" 
---
apiVersion: "v1"
kind: "ResourceQuota"
metadata:
  name: 'staging-workshop-quota'
  namespace: '{{ user }}-staging'  
spec:
  hard:
    pods: '12'
    limits.cpu: '8'
    limits.memory: '15Gi'