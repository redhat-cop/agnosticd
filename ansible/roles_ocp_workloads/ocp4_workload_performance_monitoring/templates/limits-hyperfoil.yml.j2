---
apiVersion: "v1"
kind: "LimitRange"
metadata:
  name: "hyperfoil-workshop-limit"
  namespace: '{{ user }}-hyperfoil' 
spec:
  limits:
    - type: "Pod"
      max:
        cpu: "1" 
        memory: "1Gi" 
    - type: "Container"
      max:
        cpu: "500m" 
        memory: "900Mi" 
      # default:
      #   cpu: "300m" 
      #   memory: "600Mi" 
      defaultRequest:
        cpu: "200m" 
        memory: "600Mi" 
---
apiVersion: "v1"
kind: "ResourceQuota"
metadata:
  name: 'hyperfoil-workshop-quota'
  namespace: '{{ user }}-hyperfoil'
spec:
  hard:
    pods: '4'
    limits.cpu: '3'
    limits.memory: '5Gi'