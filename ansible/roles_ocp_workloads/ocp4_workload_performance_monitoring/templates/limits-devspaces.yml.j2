---
apiVersion: "v1"
kind: "LimitRange"
metadata:
  name: "staging-workshop-limit"
  namespace: '{{ user }}-devspaces'
spec:
  limits:
    - type: "Container"
      max:
        cpu: "4"
        memory: "8Gi" 
      defaultRequest:
        cpu: "250m"
        memory: "500m"
---
apiVersion: "v1"
kind: "ResourceQuota"
metadata:
  name: 'staging-workshop-quota'
  namespace: '{{ user }}-devspaces'
spec:
  hard:
    pods: '2'
    limits.cpu: '4'
    limits.memory: '10Gi'