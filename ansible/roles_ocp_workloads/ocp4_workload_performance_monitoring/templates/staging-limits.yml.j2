---
apiVersion: "v1"
kind: "LimitRange"
metadata:
  name: "staging-workshop-limit" 
spec:
  limits:
    - type: "Pod"
      max:
        cpu: "1" 
        memory: "2Gi" 
    - type: "Container"
      max:
        cpu: "{{ serverless_app_cpu_limit }}" 
        memory: "{{ serverless_app_memory_limit }}" 
      defaultRequest:
        cpu: "{{ serverless_app_cpu_request }}" 
        memory: "{{ serverless_app_memory_request }}" 
---
apiVersion: "v1"
kind: "ResourceQuota"
metadata:
  name: 'staging-workshop-quota'
spec:
  hard:
    pods: '6'
    limits.cpu: '3'
    limits.memory: '6Gi'