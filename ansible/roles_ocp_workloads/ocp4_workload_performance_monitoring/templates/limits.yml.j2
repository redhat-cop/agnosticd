---
apiVersion: "v1"
kind: "LimitRange"
metadata:
  name: "cicd-workshop-limit"
  namespace: '{{ user }}-cicd'
spec:
  limits:
    - type: Pod
      max:
        cpu: '2'
        memory: 4Gi
    - type: Container
      max:
        cpu: '2'
        memory: 2Gi
      default:
        cpu: '1'
        memory: 1Gi
      defaultRequest:
        cpu: 200m
        memory: 600Mi
---
apiVersion: "v1"
kind: "ResourceQuota"
metadata:
  name: 'cicd-workshop-quota'
  namespace: '{{ user }}-cicd'
spec:
  hard:
    pods: '2'
    limits.cpu: '4'
    limits.memory: '6Gi'
---
apiVersion: "v1"
kind: "LimitRange"
metadata:
  name: "devspaces-workshop-limit"
  namespace: '{{ user }}-devspaces'
spec:
