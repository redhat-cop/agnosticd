apiVersion: kafka.strimzi.io/v1beta2
kind: Kafka
metadata:
  name: my-cluster
  namespace: {{ namespace }}
spec:
  entityOperator:
    topicOperator:
      reconciliationIntervalSeconds: 90
    userOperator:
      reconciliationIntervalSeconds: 120
  kafka:
    config:
      log.message.format.version: '3.0'
      inter.broker.protocol.version: '3.0'
      offsets.topic.replication.factor: 1
      transaction.state.log.min.isr: 1
      transaction.state.log.replication.factor: 1
    listeners:
      - name: plain
        port: 9092
        type: internal
        tls: false
      - name: tls
        port: 9093
        type: internal
        tls: true
    replicas: 3
    resources:
      limits:
        cpu: 200m
        memory: 800Mi
      requests:
        cpu: 100m
        memory: 600Mi
    storage:
      type: ephemeral
    version: 3.0.0
  zookeeper:
    replicas: 3
    resources:
      limits:
        cpu: 200m
        memory: 600Mi
      requests:
        cpu: 100m
        memory: 500Mi
    storage:
      type: ephemeral
