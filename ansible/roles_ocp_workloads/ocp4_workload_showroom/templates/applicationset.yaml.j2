---
apiVersion: argoproj.io/v1alpha1
kind: ApplicationSet
metadata:
  name: "{{ ocp4_workload_showroom_namespace }}-multiuser"
  namespace: openshift-gitops
spec:
  generators:
  - list:
      elements:
{% for n in range(1, _user_count | int + 1 ) %}
      - user: user{{ n }}
        userData: |
          {{ _showroom_user_data[users]['user'~n] | to_nice_yaml }}
{% endfor %}
  template:
    metadata:
      name: "{{ ocp4_workload_showroom_namespace }}-{% raw %}{{ user }}{% endraw %}"
      namespace: openshift-gitops
      finalizers:
      - resources-finalizer.argocd.argoproj.io
    spec:
      destination:
        name: ""
        namespace: "{{ ocp4_workload_showroom_namespace }}-{% raw %}{{ user }}{% endraw %}"
        server: 'https://kubernetes.default.svc'
      project: default
      syncPolicy:
        syncOptions:
        - CreateNamespace=true
        automated:
          prune: false
          selfHeal: false
      source:
        repoURL: {{ ocp4_workload_showroom_chart_repo_url }}
        targetRevision: {{ ocp4_workload_showroom_chart_repo_revision }} # main
        path: {{ ocp4_workload_code_server_repo_path }} # charts/showroom
        helm:
          values: |
            namespace:
              create: false
              name: "{{ ocp4_workload_showroom_namespace }}-{% raw %}{{user}}{% endraw %}"
            deployer:
              domain: {{ _deployer_domain }}
            general:
              guid: {{ guid }}
            content:
              repoUrl: https://github.com/rhpds/aro-ilt.git
              user_data: |
                {% raw %}{{userData}}{% endraw %}
