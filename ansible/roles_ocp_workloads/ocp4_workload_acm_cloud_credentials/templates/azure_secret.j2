apiVersion: v1
kind: Secret
metadata:
  name: {{ azr_acm_secret_name }}
  namespace: {{ azr_acm_secret_namespace | default('open-cluster-management') }}
  annotations:
  labels:
    cluster.open-cluster-management.io/credentials: ""
    cluster.open-cluster-management.io/type: azr
type: Opaque
data:
  baseDomain: {{ azr_dns_zone | string | b64encode }}
  pullSecret: {{ ocp4_token | string | b64encode }}
  ssh-privatekey: {{ ssh_privatekey | string | b64encode }}
  ssh-publickey: {{ ssh_publickey | string | b64encode }}
  cloudName: QXp1cmVQdWJsaWNDbG91ZA==
  baseDomainResourceGroupName: {{ azr_resource_group_name | string | b64encode }}
  osServicePrincipal.json: {{  azr_service_principal | to_json  | b64encode }}
