---
kind: Deployment
apiVersion: apps/v1
metadata:
  name: www
  labels:
    app: www
    app.kubernetes.io/component: www
    app.kubernetes.io/instance: www
spec:
  replicas: 1
  selector:
    matchLabels:
      deployment: www
  template:
    metadata:
      labels:
        deployment: www
    spec:
      containers:
        - name: www
          image: quay.io/redhat_na_ssa/workshop-3scale-www:1.0.0
          env:
            - name: API_BACKEND_URL
              value: https://location-user{{ item }}-apicast-staging.{{ route_subdomain }}/locations
            - name: CLIENT_ID
              value: CHANGE_ME
            - name: SSO_REALM
              value: user{{ item }}-realm
            - name: SSO_URL
              value: 'https://keycloak-{{ sso_project }}.{{ route_subdomain }}'
          ports:
            - containerPort: 8080
              protocol: TCP
          resources: {}
          terminationMessagePath: /dev/termination-log
          terminationMessagePolicy: File
          imagePullPolicy: IfNotPresent
      restartPolicy: Always
      terminationGracePeriodSeconds: 30
      dnsPolicy: ClusterFirst
      securityContext: {}
      schedulerName: default-scheduler
  strategy:
    type: RollingUpdate
    rollingUpdate:
      maxUnavailable: 25%
      maxSurge: 25%
  revisionHistoryLimit: 10
  progressDeadlineSeconds: 600
---
kind: Service
apiVersion: v1
metadata:
  name: www
  labels:
    app: www
    app.kubernetes.io/component: www
    app.kubernetes.io/instance: www
spec:
  ports:
    - name: 8080-tcp
      protocol: TCP
      port: 8080
      targetPort: 8080
  internalTrafficPolicy: Cluster
  type: ClusterIP
  ipFamilyPolicy: SingleStack
  sessionAffinity: None
  selector:
    deployment: www
---
kind: Route
apiVersion: route.openshift.io/v1
metadata:
  name: www
  labels:
    app: www
    app.kubernetes.io/component: www
    app.kubernetes.io/instance: www
spec:
  to:
    kind: Service
    name: www
    weight: 100
  port:
    targetPort: 8080-tcp
  wildcardPolicy: None
  tls:
    termination: edge
