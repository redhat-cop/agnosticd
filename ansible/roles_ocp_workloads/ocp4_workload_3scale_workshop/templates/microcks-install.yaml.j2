apiVersion: microcks.github.io/v1alpha1
kind: MicrocksInstall
metadata:
  name: microcks
  namespace: '{{ microcks_project }}'
spec:
  name: microcks
  version: 1.1.0
  microcks:
    url: microcks-{{ microcks_project }}.{{ route_subdomain }}
    replicas: 1
  postman:
    replicas: 1
  keycloak:
    url: microcks-keycloak-{{ microcks_project }}.{{ route_subdomain }}
    install: true
    persistent: true
    volumeSize: 1Gi
  mongodb:
    install: true
    persistent: true
    volumeSize: 1Gi
  features:
    repositoryFilter:
      enabled: false
    async:
      enabled: false
