apiVersion: hive.openshift.io/v1
kind: MachinePool
metadata:
  name: {{ cluster_name }}-worker
  namespace: {{ cluster_name }}
spec:
  {% if _ocp4_workload_rhacm_clusters_worker_replica_count|int() < 2 %}
  skipMachinePools: true
  {% endif %}
  clusterDeploymentRef:
    name: {{ cluster_name }}
  name: worker
  platform:
    aws:
      rootVolume:
        iops: 2000
        size: 100
        type: io1
      type: "{{ _ocp4_workload_rhacm_clusters_worker_instance_type | ocp4_workload_rhacm_clusters_default_aws_worker_instance_type }}"
  replicas: 0
