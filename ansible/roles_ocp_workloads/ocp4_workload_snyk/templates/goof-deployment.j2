---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: goof
  namespace: user{{ item }}
  annotations:
    orgs.k8s.snyk.io/v1: {{ ocp4_workload_snyk_annotation }}
spec:
  replicas: 1
  selector:
    matchLabels:
      app: goof
      tier: frontend
  template:
    metadata:
      labels:
        app: goof
        tier: frontend
    spec:
      containers:
        - name: goof
          image: {{ ocp4_workload_snyk_goof_image }}
          imagePullPolicy: Always
          resources:
            requests:
              cpu: 100m
              memory: 100Mi
          ports:
            - containerPort: 3001
            - containerPort: 9229
          env:
            - name: DOCKER
              value: "1"