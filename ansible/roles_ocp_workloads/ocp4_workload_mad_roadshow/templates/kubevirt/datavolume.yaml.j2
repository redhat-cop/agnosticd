---
apiVersion: cdi.kubevirt.io/v1beta1
kind: DataVolume
metadata:
  name: {{ ocp4_workload_mad_roadshow_kubevirt_image_name }}
  namespace: {{ ocp4_workload_mad_roadshow_kubevirt_image_namespace }} 
spec:
  source:
      http:
       url: {{ ocp4_workload_mad_roadshow_kubevirt_image_location }}
  pvc:
    volumeMode: Block
    storageClassName: "{{ ocp4_workload_mad_roadshow_kubevirt_image_storage_class }}"
    accessModes:
    - ReadWriteOnce
    resources:
      requests:
        storage: {{ ocp4_workload_mad_roadshow_kubevirt_image_size }}
