apiVersion: argoproj.io/v1alpha1
kind: Application
metadata:
  name: {{ ocp4_workload_app_connectivity_workshop_servicemesh_operator_application_name }}
  namespace: {{ ocp4_workload_app_connectivity_workshop_argocd_namespace }}
  finalizers:
    - resources-finalizer.argocd.argoproj.io/foreground
spec:
  destination:
    server: 'https://kubernetes.default.svc'
    namespace: {{ ocp4_workload_app_connectivity_workshop_servicemesh_operator_application_namespace }}
  project: {{ ocp4_workload_app_connectivity_workshop_gitops_infra_project }}
  syncPolicy:
    automated:
      prune: true
      selfHeal: true
    syncOptions:
      - ApplyOutOfSyncOnly=true
      - CreateNamespace=true
  source:
    repoURL: {{ ocp4_workload_app_connectivity_workshop_servicemesh_operator_gitops_repo }}
    targetRevision: {{ ocp4_workload_app_connectivity_workshop_servicemesh_operator_gitops_repo_tag }}
    path: {{ ocp4_workload_app_connectivity_workshop_servicemesh_operator_gitops_repo_path }}
    helm:
      values: |
        subscription:
          channel: {{ ocp4_workload_app_connectivity_workshop_servicemesh_operator_operator_channel }}
          installPlanApproval: {{ ocp4_workload_app_connectivity_workshop_servicemesh_operator_operator_install_plan_approval }}
          name: {{ ocp4_workload_app_connectivity_workshop_servicemesh_operator_operator_name }}
          source: {{ ocp4_workload_app_connectivity_workshop_servicemesh_operator_catalogsource }}
          sourceNamespace: {{ ocp4_workload_app_connectivity_workshop_servicemesh_operator_catalogsource_namespace }}
          startingCSV: {{ ocp4_workload_app_connectivity_workshop_servicemesh_operator_operator_starting_csv }}
